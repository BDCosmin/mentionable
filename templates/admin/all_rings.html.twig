{% extends 'base.html.twig' %}

{% block title %}All rings - Admin - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center mb-4 mt-2">
                <div class="col-lg-8 p-3 justify-content-center">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-lg-8 p-3 justify-content-center">
                    <div class="d-flex flex-row justify-content-center">
                        <h1 class="text-center d-none d-md-flex">
                            Rings
                        </h1>
                        <h1 class="text-center d-flex d-md-none mt-1" style="font-size: 24px">
                            Rings
                        </h1>
                        <span class="badge badge-light text-dark mt-2 ms-2" style="height: 25px">{{ rings|length }}</span>
                    </div>
                </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th> Banner </th>
                                        <th> Title </th>
                                        <th> Interest </th>
                                        <th> Description </th>
                                        <th> Owner </th>
                                        <th> Created At </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if rings is defined and rings is not empty %}
                                        {% for ring in rings %}
                                            <tr
                                                    {% if ring.isSuspended %}
                                                        style="background-color: rgba(15,17,21,0.65);"
                                                    {% endif %}
                                            >
                                                <td class="py-1">
                                                    <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                                         alt="Banner"
                                                         class="img-fluid mt-1 mb-1"
                                                         style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover; box-shadow: 0 0 3px rgba(255,255,255,0.1);"
                                                         onerror="showDefaultImage(this)"/>
                                                </td>
                                                <td
                                                        {% if ring.isSuspended %}
                                                            style="color: rgba(255, 255, 255, 0.46);"
                                                        {% endif %}
                                                >
                                                <a href="{{ path('app_ring_show', {'id': ring.id}) }}" class="text-white">
                                                    {{ ring.title }}
                                                </a>
                                                </td>
                                                <td
                                                        {% if ring.isSuspended %}
                                                            style="color: rgba(255, 255, 255, 0.46);"
                                                        {% endif %}
                                                > #{{ ring.interest }} </td>
                                                <td
                                                        {% if ring.isSuspended %}
                                                            style="color: rgba(255, 255, 255, 0.46);"
                                                        {% endif %}
                                                >
                                                  {{ ring.description|slice(0, 80) }}
                                                </td>
                                                <td
                                                        {% if ring.isSuspended %}
                                                            style="color: rgba(255, 255, 255, 0.46);"
                                                        {% endif %}
                                                >
                                                   {{ ring.user.nametag }}
                                                </td>
                                                <td
                                                        {% if ring.isSuspended %}
                                                            style="color: rgba(255, 255, 255, 0.46);"
                                                        {% endif %}
                                                > {{ ring.createdAt|date('d-m-Y') }} </td>
                                                <td>
                                                    <a href="#" data-bs-toggle="modal" data-bs-target="#ringDeletionManagement{{ ring.id }}" class="btn btn-warning">
                                                        <i class="fa fa-trash-o" style="color: white; font-size: 20px"></i>
                                                    </a>
                                                    {% if ring.isSuspended %}
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#ringReactivationManagement{{ ring.id }}" class="btn btn-success">
                                                            <i class="fa fa-check" style="color: white; font-size: 20px"></i> Reactivate
                                                        </a>
                                                    {% else %}
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#ringSuspendManagement{{ ring.id }}" class="btn btn-danger">
                                                            <i class="fa fa-ban" style="color: white; font-size: 20px"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {% for ring in rings %}
                    <!-- Modal delete ring management -->
                    <div class="modal fade" id="ringDeletionManagement{{ ring.id }}" tabindex="-1" aria-labelledby="ringDeletionManagementLabel{{ ring.id }}">
                        <div class="modal-dialog" style="max-width: 850px;">
                            <div class="modal-content" style="background-color: #181b20; border-radius: 5px;">
                                <div class="modal-header bg-warning text-white">
                                    <h5 class="modal-title" id="ringDeletionManagementLabel{{ ring.id }}">Confirm deleting the ring {{ ring.title }}</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this ring? This action would result in losing all of its data.
                                </div>
                                <div class="modal-footer">
                                    <form method="post" id="deleteRingForm" action="{{ path('admin_ring_delete', {'id': ring.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-ring-' ~ ring.id) }}">
                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-warning">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal suspend ring management -->
                    <div class="modal fade" id="ringSuspendManagement{{ ring.id }}" tabindex="-1" aria-labelledby="ringSuspendManagementLabel{{ ring.id }}">
                        <div class="modal-dialog" style="max-width: 850px;">
                            <div class="modal-content" style="background-color: #181b20; border-radius: 5px;">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="ringSuspendManagementLabel{{ ring.id }}">Confirm suspending the ring {{ ring.title }}</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to suspend this ring? This action would not delete the ring but instead, the ring won't be accessible anymore until further review from admins.
                                </div>
                                <div class="modal-footer">
                                    <form method="post" id="suspendRingForm" action="{{ path('admin_suspend_ring', {'id': ring.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('suspend-ring-' ~ ring.id) }}">
                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Suspend</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal reactivate ring management -->
                    <div class="modal fade" id="ringReactivationManagement{{ ring.id }}" tabindex="-1" aria-labelledby="ringReactivationManagementLabel{{ ring.id }}">
                        <div class="modal-dialog" style="max-width: 850px;">
                            <div class="modal-content" style="background-color: #181b20; border-radius: 5px;">
                                <div class="modal-header bg-success text-white">
                                    <h5 class="modal-title" id="ringReactivationManagementLabel{{ ring.id }}">Confirm reactivating the ring {{ ring.title }}</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to reactivate this ring? This will restore its accessibility to the website.
                                </div>
                                <div class="modal-footer">
                                    <form method="post" action="{{ path('admin_user_unban', {'id': ring.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('unban-user-' ~ ring.id) }}">
                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-success">Reactivate</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script>
    document.querySelectorAll('.modal').forEach(modal => {
        modal.addEventListener('hide.bs.modal', () => {
            const focused = document.activeElement;
            if (modal.contains(focused)) {
                focused.blur();
                document.body.focus();
            }
        });
    });
</script>
{% endblock %}