{% extends 'base.html.twig' %}

{% block title %}All interests - Admin - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center mb-4 mt-2">
                <div class="col-lg-8 p-3 justify-content-center">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-lg-8 p-3 justify-content-center">
                    <div class="d-flex flex-row justify-content-center">
                        <h1 class="text-center d-none d-md-flex">
                            Interests
                        </h1>
                        <h1 class="text-center d-flex d-md-none mt-1" style="font-size: 24px">
                            Interests
                        </h1>
                        <span class="badge badge-light text-dark mt-2 ms-2" style="height: 25px">{{ interests|length }}</span>
                    </div>
                </div>
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th> Title </th>
                                        <th class="d-flex justify-content-end"> Action </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if interests is defined and interests is not empty %}
                                        {% for interest in interests %}
                                            <tr>
                                                <td>
                                                    <a href="{{ path('app_interest_show', {'id': interest.id}) }}" class="text-white">
                                                        {{ interest.title }}
                                                    </a>
                                                </td>
                                                <td class="d-flex justify-content-end">
                                                    {% if interest.title != 'default' %}
                                                        <a href="#" data-bs-toggle="modal" data-bs-target="#interestDeletionManagement{{ interest.id }}" class="btn btn-danger">
                                                            <i class="fa fa-trash-o" style="color: white; font-size: 20px"></i>
                                                        </a>
                                                    {% else %}
                                                        <p class="m-0 text-muted">This interest cannot be deleted.</p>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {% for interest in interests %}
                    <!-- Modal delete interest management -->
                    <div class="modal fade" id="interestDeletionManagement{{ interest.id }}" tabindex="-1" aria-labelledby="interestDeletionManagementLabel{{ interest.id }}">
                        <div class="modal-dialog" style="max-width: 850px;">
                            <div class="modal-content" style="background-color: #181b20; border-radius: 5px;">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="interestDeletionManagementLabel{{ interest.id }}">Confirm deleting the ring {{ interest.title }}</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this interest? This action would result in losing all of its data.
                                </div>
                                <div class="modal-footer">
                                    <form method="post" id="deleteInterestForm" action="{{ path('admin_interest_delete', {'id': interest.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-interest-' ~ interest.id) }}">
                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script>
    document.querySelectorAll('.modal').forEach(modal => {
        modal.addEventListener('hide.bs.modal', () => {
            const focused = document.activeElement;
            if (modal.contains(focused)) {
                focused.blur();
                document.body.focus();
            }
        });
    });
</script>
{% endblock %}