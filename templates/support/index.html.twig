{% extends 'base.html.twig' %}

{% block title %}Support{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center px-0 mb-4 mt-5">
                <div class="col-lg-8 p-2" style="background-color: #181b20; border-radius: 5px;">
                    {% for msg in app.flashes('success') %}
                        <div class="alert alert-success">{{ msg }}</div>
                    {% endfor %}
                    {% for msg in app.flashes('error') %}
                        <div class="alert alert-danger">{{ msg }}</div>
                    {% endfor %}
                    <div class="ms-3 mt-3 p-0 mb-3">
                        <h2>Support</h2>
                        <p class="mb-5">Having trouble or need help? We’re here for you! If you’re experiencing issues with the platform, your account, or just want to share feedback, don’t hesitate to reach out.</p>

                        {{ form_start(supportForm, {'attr': {'class': 'forms-sample'}}) }}
                        {{ form_errors(supportForm) }}
                        <div class="form-group">
                            {{ form_label(supportForm.email) }}
                            {{ form_widget(supportForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(supportForm.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(supportForm.description) }}
                            {{ form_widget(supportForm.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(supportForm.description) }}
                        </div>
                        <div class="d-flex justify-content-end me-2 me-md-4">
                            <button type="submit" class="btn btn-primary" style="width: 100px">Send</button>
                        </div>
                        {{ form_end(supportForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}