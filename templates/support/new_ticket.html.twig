{% extends 'base.html.twig' %}

{% block title %}New ticket - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center px-0 mb-4 mt-5">
                <div class="col-lg-8 p-2" style="background-color: #181b20; border-radius: 5px;">
                    {% for msg in app.flashes('success') %}
                        <div class="alert alert-success">{{ msg }}</div>
                    {% endfor %}
                    {% for msg in app.flashes('error') %}
                        <div class="alert alert-danger">{{ msg }}</div>
                    {% endfor %}
                    <div class="m-3 p-0">
                        <h2>New ticket</h2>
                        <p class="mb-3">We’re here for you! If you’re experiencing issues with the platform, your account, or just want to share feedback, don’t hesitate to reach out. You can revisit the status of the ticket anytime by accessing your tickets from Support Center.</p>

                        {{ form_start(newTicketForm, {'attr': {'class': 'forms-sample'}}) }}
                        {{ form_errors(newTicketForm) }}
                        <div class="form-group mb-3">
                            {{ form_widget(newTicketForm.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(newTicketForm.type) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(newTicketForm.content, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(newTicketForm.content) }}
                        </div>
                        <div class="d-flex justify-content-end me-2 me-md-4">
                            <button type="submit" class="btn btn-primary" style="width: 100px">Send</button>
                        </div>
                        {{ form_end(newTicketForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}