{% extends 'base.html.twig' %}

{% block title %}Home - Mentionable{% endblock %}

{% block body %}
<div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center mb-4">
                {# NOTES LIST #}
                <div class="row justify-content-center mb-4">
                    {# NOTE #}
                    {% if note is defined %}
                        <div class="col-lg-7 pt-4 ps-4 pe-4 pb-3" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                            {# NOTE PROFILE #}
                            <div class="navbar-profile d-flex flex-row text-light mb-3" style="width: 100%;">
                                <a class="nav-link me-3 mt-2" id="avatarNote" href="#">
                                    <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ note.user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                </a>
                                <div class="d-flex flex-column">
                                    <a class="nav-link mt-3" id="nametagNote" href="#">
                                        <h5 class="mb-0 d-none d-sm-block navbar-profile-name">@{{ note.user.nametag }}</h5>
                                    </a>
                                    <div class="d-flex flex-row m-0 p-0" style="font-size: 12px; color: gray">
                                        <i class="fa fa-clock-o mt-1 me-1"></i>
                                        <p>{{ note.humanTimePost  }}</p>
                                    </div>
                                </div>
                                <div class="dropdown ms-auto mt-1 me-1">
                                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-sort-desc" style="color: white"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% if app.user.nametag == note.user.nametag %}
                                            <li><a class="dropdown-item" href="#">Edit...</a></li>
                                            <li><a class="dropdown-item" href="#">Delete note</a></li>
                                        {% else %}
                                            <li><a class="dropdown-item" href="#">Report</a></li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                            {# NOTE CONTENT #}
                            <div class="d-flex flex-row text-gray mb-2">
                                <p style="font-size: 16px">{{ note.content }}</p>
                            </div>
                            {# NOTE NAV VOTES & COMMENTS #}
                            <div class="d-flex flex-row text-gray mt-3 mb-2 ms-0 ps-0">
                                {# UPVOTE FORM #}
                                <form method="POST" action="{{ path('note_upvote', {id: note.id}) }}" class="me-2">
                                    <button class="btn btn-sm btn-outline-light d-flex align-items-center border-0" type="submit">
                                        <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                        <span class="ms-1">{{ note.upVote ?? 0 }}</span>
                                    </button>
                                </form>

                                {# DOWNVOTE FORM #}
                                <form method="POST" action="{{ path('note_downvote', {id: note.id}) }}" class="me-2">
                                    <button class="btn btn-sm btn-outline-light d-flex align-items-center border-0" type="submit">
                                        <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                                        <span class="ms-1">{{ note.downVote ?? 0 }}</span>
                                    </button>
                                </form>
                                {# COMMENTS BUTTON #}
                                <button type="button"
                                        class="btn btn-outline-light btn-sm d-flex flex-row border-0 ps-0 toggle-comments"
                                        data-note-id="{{ note.id }}"
                                        style="height: 2rem">
                                    <i class='bx bx-message-circle-reply pt-1 pe-2' style='color: white'></i>
                                    <p class="mb-0">COMMENTS ({{ note.comments|length }})</p>
                                </button>
                                {# NOTE MENTIONED #}
                                <div class="d-block d-md-inline-block w-100 w-md-auto text-gray ms-2 mt-1 mb-1 ps-1 pe-1">
                                    <p style="margin-bottom: -2px">
                                        mentioned <b style="background-color: #2A3038">@{{ note.nametag }}</b>
                                    </p>
                                </div>
                            </div>
                            {# NOTE DIVIDER #}
                            <div class="d-flex flex-row text-gray mt-3 mb-2">
                                <hr style="border: 1px solid #757575; width: 100%;">
                            </div>

                            {# NOTE COMMENT #}
                            <div class="note-comments" id="comments-{{ note.id }}">
                                {# FORMULAR COMENTARIU #}
                                <form method="POST" action="{{ path('note_comment', {id: note.id}) }}">
                                    <div class="d-flex flex-row mb-3">
                                        <a class="nav-link me-2" href="#">
                                            <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ note.user.avatar) }}" alt="avatar">
                                        </a>
                                        <div class="d-flex flex-row w-100">
                                            <input type="text" name="message" class="form-control mb-1" placeholder="Write a comment..." required>
                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-light btn-sm px-3" style="height: 40px;">Post</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                {# LISTA DE COMENTARII #}
                                {% for comment in note.comments %}
                                    <div class="d-flex flex-row mb-3">
                                        <a class="nav-link me-2" href="#">
                                            <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" alt="avatar">
                                        </a>
                                        <div class="text-white">
                                            <p class="mb-0">@{{ comment.user.nametag }}</p>
                                            <small class="text-muted">{{ comment.message }}</small>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% else %}
                        <div class="col-lg-7 pt-4 ps-4 pe-4" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                            <p class="text-light">Oops. No notes available here.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
