{% extends 'base.html.twig' %}

{% block title %}Update post - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center mb-4">
                {% if error is defined and error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}

                {# NOTES LIST #}
                <div class="row justify-content-center mb-4">
                    {# NOTE #}
                    {% if note is defined %}
                        <div class="col-lg-7 mt-4 p-0 d-flex flex-row" style="background-color: #354765;border-top-right-radius: 5px; border-top-left-radius: 5px; margin-top: 2rem;">
                            <p class="text-gray ms-2 mt-1 mb-1">Edit note...</p>
                        </div>
                        <div class="col-lg-7 ps-4 pe-4 pb-3" style="background-color: #181b20; border-bottom-right-radius: 5px; border-bottom-left-radius: 5px;">
                            {# NOTE PROFILE #}
                            <div class="navbar-profile d-flex flex-row text-light mb-3" style="width: 100%;">
                                <a class="nav-link me-3 mt-2" id="avatarNote" href="#">
                                    <img class="img-sm rounded-circle" src="{{ asset('Uploads/avatars/' ~ note.user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                </a>
                                <div class="d-flex flex-column">
                                    <a class="nav-link mt-3" id="nametagNote" href="#">
                                        <h5 class="mb-0 d-block d-sm-none navbar-profile-name small">@{{ note.user.nametag }}</h5>
                                        <h5 class="mb-0 d-none d-sm-block navbar-profile-name">@{{ note.user.nametag }}</h5>
                                    </a>
                                    <div class="d-flex flex-row m-0 p-0" style="font-size: 12px; color: gray">
                                        <i class="fa fa-clock-o mt-1 me-1"></i>
                                        <p>{{ note.humanTimePost  }}</p>
                                    </div>
                                </div>
                            </div>
                            {# EDIT NOTE CONTENT & IMAGE #}
                            <form method="POST" action="{{ path('app_note_update', {'id': note.id, 'ringId': ringId}) }}" enctype="multipart/form-data">
                                {% if note.mentionedUser %}
                                    <input type="hidden" name="nametag" value="{{ note.mentionedUser.nametag }}">
                                {% endif %}

                                <div class="d-flex flex-column text-gray mb-3">
                                    <textarea name="content" id="content" class="form-control" rows="4" style="height: 120px;" required>{{ note.content }}</textarea>
                                </div>

                                <div class="d-flex flex-column text-gray mb-3">
                                    <label for="image" class="text-light mb-2">Change Image (optional)</label>
                                    {% if note.image %}
                                        <img src="{{ asset('Uploads/notes/' ~ note.image)}}" alt="noteImage" class="mb-2" style="max-width: 100%;">
                                    {% endif %}
                                    <input type="file" name="image" id="image" class="form-control">
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success" name="update_btn">Save</button>
                                </div>
                            </form>
                            {# NOTE NAV – DESKTOP & MOBILE HYBRID #}
                            <div class="d-flex flex-wrap align-items-center text-gray mt-2 mb-1 ms-0 ps-0">
                                {# VOTE & COMMENTS – ALWAYS SHOWN #}
                                <div class="d-flex flex-row flex-wrap">
                                    {# UPVOTE #}
                                    <button class="upvote-btn btn btn-sm d-flex align-items-center border-0
                                                            {% if votesMap[note.id] is defined and votesMap[note.id] == 'upvote' %}
                                                                btn-light
                                                            {% else %}
                                                                btn-outline-light
                                                            {% endif %}"
                                            data-id="{{ note.id }}">
                                        <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                        <span class="ms-1" id="upvotes-{{ note.id }}">{{ note.getUpVote() }}</span>
                                    </button>

                                    {# DOWNVOTE #}
                                    <button class="downvote-btn btn btn-sm d-flex align-items-center border-0
                                                            {% if votesMap[note.id] is defined and votesMap[note.id] == 'downvote' %}
                                                                btn-light
                                                            {% else %}
                                                                btn-outline-light
                                                            {% endif %}"
                                            data-id="{{ note.id }}">
                                        <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                                        <span class="ms-1" id="downvotes-{{ note.id }}">{{ note.getDownVote() }}</span>
                                    </button>

                                    {# COMMENTS BUTTON #}
                                    <button type="button"
                                            class="btn btn-outline-light btn-sm d-flex flex-row align-items-center border-0 ps-2 pe-2 ms-1 toggle-comments compact-btn"
                                            data-note-id="{{ note.id }}">
                                        <i class='bx bx-message-circle-reply pe-1'></i>
                                        <span class="comment-count">{{ note.comments|length }}</span>
                                    </button>

                                    {% if note.user.nametag != 'mentionable' %}
                                        <div class="ms-2 me-2 pt-1 d-none d-md-block">
                                            <p class="text-white" style="margin-top: 7px">•</p>
                                        </div>

                                        {# NOTE MENTIONED – SHOWN ONLY ON DESKTOP #}
                                        <div class="d-none d-md-block ps-1 pe-1" style="margin-top: 10px">
                                            <p class="mb-0 mt-0 text-white" style="font-size: 16px">
                                                mentioned
                                                {% if note.mentionedUser %}
                                                    <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUser.id}) }}" style="text-decoration: none;">
                                                        <b style="background-color: #2A3038">@{{ note.mentionedUser.nametag }}</b>
                                                    </a>
                                                {% endif %}
                                            </p>
                                        </div>
                                    {% endif %}
                                </div>

                                {# NOTE MENTIONED – SHOWN ONLY ON MOBILE, BELOW BUTTONS #}
                                {% if note.user.nametag != 'mentionable' %}
                                    <div class="d-block d-md-none w-100 mt-2 ps-3 pe-1 mb-2">
                                        <p class="text-white" style="margin-bottom: -2px; font-size: 16px">
                                            mentioned
                                            {% if note.mentionedUser %}
                                                <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUser.id}) }}" style="text-decoration: none;">
                                                    <b style="background-color: #2A3038">@{{ note.mentionedUser.nametag }}</b>
                                                </a>
                                            {% endif %}
                                        </p>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% else %}
                        <div class="col-lg-7 pt-4 ps-4 pe-4" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                            <p class="text-light">Oops. No notes available here.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script>
    window.votesMap = {{ votesMap|json_encode|raw }};
</script>
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}