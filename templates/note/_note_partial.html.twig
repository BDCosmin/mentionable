<div class="col-lg-7 pt-4 ps-4 pe-4 pb-3" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
    {# NOTE PROFILE #}
    <div class="navbar-profile p-2 ps-3 d-flex flex-row text-light mb-3" style="width: 100%;">
        <a class="nav-link me-3 mt-2" id="avatarNote" href="{{ path('app_profile', {'id': note.user.id}) }}">
            <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ note.user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
        </a>
        <div class="d-flex flex-column">
            <a class="nav-link mt-2" id="nametagNote" href="{{ path('app_profile', {'id': note.user.id}) }}">
                <h5 class="mb-0 navbar-profile-name">@{{ note.user.nametag }}</h5>
            </a>
            <div class="d-flex flex-column m-0 p-0" style="font-size: 12px; color: gray">
                <div class="d-flex flex-row m-0 p-0">
                    {% if note.isEdited %}
                        <i class="fa fa-clock-o mt-1 me-1"></i>
                    {% endif %}
                    <p>{{ note.humanTimePost }}</p>
                    <p class="ms-1 me-1">•</p>
                    <a class="m-0 p-0" style="text-decoration: none; color: #d1d0d0" href="{{ path('app_note_show', {'noteId': note.id}) }}">
                        <p>View</p>
                    </a>
                </div>
                {% if note.user.nametag != 'mentionable' %}
                    {% if note.ring %}
                        <p class="me-1 mb-1" style="margin-top: -17px">from
                            <a href="{{ path('app_ring_show', {'id': note.ring.id}) }}" style="text-decoration: none; color: white">
                                {{ note.ring.title }}
                            </a>
                            {% set role = rolesMap[note.user.id]|default('member') %}
                            {% set bgColor = role == 'member' ? '#6c757d' : 'orange' %}
                            <span style="
                                    background-color: {{ bgColor }};
                                    color: white;
                                    padding: 2px 8px;
                                    border-radius: 12px;
                                    font-weight: 600;
                                    text-transform: capitalize;
                                    white-space: nowrap;">
                                {{ role|capitalize }}
                            </span>
                        </p>
                    {% endif %}
                {% endif %}
            </div>
        </div>
        {% if note.user.id != 24 or (note.user.id == 24 and app.user.id == 24) %}
            <div class="dropdown ms-auto mt-1 me-2">
                <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none;">
                    <i class="fa fa-sort-desc" style="color: white"></i>
                </a>
                <ul class="dropdown-menu">
                    {% if app.user.nametag == note.user.nametag %}
                        <li>
                            <a class="dropdown-item" href="{{ path('app_note_update', {id: note.id}) }}">Edit...</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#"
                               data-bs-toggle="modal"
                               data-bs-target="#deleteNoteModal"
                               data-note-id="{{ note.id }}"
                               data-note-token="{{ csrf_token('delete' ~ note.id) }}">
                                Delete note
                            </a>
                        </li>
                    {% elseif note.user.id != 24 and app.user.nametag != note.user.nametag %}
                        <li>
                            <a class="dropdown-item" href="{{ path('app_note_report', {id: note.id}) }}">Report</a>
                        </li>
                    {% endif %}
                </ul>
                {# FAVORITE BUTTON #}
                <button class="favorite-btn btn btn-sm ms-1
                    {% if favoritesMap[note.id] %}
                        btn-warning
                    {% else %}
                        btn-outline-warning
                    {% endif %}"
                        data-id="{{ note.id }}"
                        style="border-radius: 50%">
                    <i class="bx {% if favoritesMap[note.id] %}bxs-star{% else %}bx-star{% endif %}" style="font-size: 18px; margin-top: 5px;"></i>
                </button>
                <div class="modal fade" id="deleteNoteModal" tabindex="-1" aria-labelledby="deleteNoteModalLabel" aria-hidden="true" style="overflow-y: hidden;">
                    <div class="modal-dialog">
                        <div class="modal-content border-danger">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteNoteModalLabel">Confirm note deletion</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this note?
                            </div>
                            <div class="modal-footer">
                                <form method="post" id="deleteNoteForm" action="">
                                    <input type="hidden" name="_token" id="deleteTokenInput" value="">
                                    <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="dropdown ms-auto mt-1 me-1">
                {# FAVORITE BUTTON #}
                <button class="favorite-btn btn btn-sm ms-1
                    {% if favoritesMap[note.id] %}
                        btn-warning
                    {% else %}
                        btn-outline-warning
                    {% endif %}"
                        data-id="{{ note.id }}"
                        style="border-radius: 50%">
                    <i class="bx {% if favoritesMap[note.id] %}bxs-star{% else %}bx-star{% endif %}" style="font-size: 18px; margin-top: 5px;"></i>
                </button>
            </div>
        {% endif %}
    </div>
    {# NOTE CONTENT #}
    <div class="d-flex flex-row text-gray ps-3 mb-1">
        <p style="font-size: 16px; white-space: pre-wrap;">{{ note.content }}</p>
    </div>
    {# NOTE IMAGE #}
    {% if note.image %}
        <div class="d-flex flex-row text-gray justify-content-center mb-2">
            <a href="{{ path('app_note_show', {'noteId': note.id}) }}">
                <img
                    {% if note.image starts with 'https://' %}
                        src="{{ note.image }}"
                    {% else %}
                        src="{{ asset('uploads/notes/' ~ note.image)}}"
                    {% endif %}
                    class="img-fluid" id="noteImage" alt="noteImage" onerror="showDefaultImage(this)"
                />
            </a>
        </div>
    {% endif %}
    {# NOTE NAV – DESKTOP & MOBILE HYBRID #}
    <div class="d-flex flex-wrap align-items-center text-gray mt-2 mb-1 ms-0 ps-0">
        {# VOTE & COMMENTS – ALWAYS SHOWN #}
        <div class="d-flex flex-row flex-wrap" style="width: 100%">
            {# UPVOTE #}
            <button class="upvote-btn btn btn-sm    d-flex align-items-center border-0
                                    {% if votesMap[note.id] is defined and votesMap[note.id] == 'upvote' %}
                                        btn-light
                                    {% else %}
                                        btn-outline-light
                                    {% endif %}"
                    data-id="{{ note.id }}">
                <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                <span class="ms-1" id="upvotes-{{ note.id }}">{{ note.getUpVote() }}</span>
            </button>

            {# DOWNVOTE #}
            <button class="downvote-btn btn btn-sm d-flex align-items-center border-0
                                    {% if votesMap[note.id] is defined and votesMap[note.id] == 'downvote' %}
                                        btn-light
                                    {% else %}
                                        btn-outline-light
                                    {% endif %}"
                    data-id="{{ note.id }}">
                <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                <span class="ms-1" id="downvotes-{{ note.id }}">{{ note.getDownVote() }}</span>
            </button>

            {# COMMENTS BUTTON #}
            <button type="button"
                    class="btn btn-outline-light btn-sm d-flex flex-row align-items-center border-0 ps-2 pe-2 ms-1 toggle-comments compact-btn"
                    data-note-id="{{ note.id }}">
                <i class='bx bx-message-circle-reply pe-1'></i>
                <span class="comment-count">{{ note.comments|length }}</span>
            </button>

            {% if note.user.nametag != 'mentionable' %}

                <div class="ms-2 me-2 pt-1 d-none d-md-block">
                    <p class="text-white" style="margin-top: 7px">•</p>
                </div>

                {# NOTE MENTIONED – SHOWN ONLY ON DESKTOP #}
                <div class="d-none d-md-block ps-1 pe-1" style="margin-top: 10px">
                    <p class="mb-0 mt-0 text-white" style="font-size: 16px">
                        mentioned
                        {% if note.mentionedUser %}
                            <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUser.id}) }}" style="text-decoration: none;">
                                <b style="background-color: #2A3038">@{{ note.mentionedUser.nametag }}</b>
                            </a>
                        {% elseif note.nametag %}
                            <b style="background-color: #2A3038">@{{ note.nametag }}</b>
                        {% endif %}
                    </p>
                </div>
            {% endif %}
        </div>

        {# NOTE MENTIONED – SHOWN ONLY ON MOBILE, BELOW BUTTONS #}
        {% if note.user.nametag != 'mentionable' %}
            <div class="d-block d-md-none w-100 mt-2 ps-3 pe-1 mb-2">
                <p class="text-white" style="margin-bottom: -2px; font-size: 16px">
                    mentioned
                    {% if note.mentionedUser %}
                        <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUser.id}) }}" style="text-decoration: none;">
                            <b style="background-color: #2A3038">@{{ note.mentionedUser.nametag }}</b>
                        </a>
                    {% endif %}
                </p>
            </div>
        {% endif %}
    </div>

    {# NOTE COMMENT #}
    <div class="note-comments" id="comments-{{ note.id }}" style="display: none;">
        {# WRITING COMMENT FORM #}
        <form method="POST" action="{{ path('note_comment', {id: note.id}) }}" class="ajax-comment-form mt-4" style="position: relative" data-note-id="{{ note.id }}">
            <div class="d-flex flex-row mb-3">
                <img class="img-xs rounded-circle me-2" src="{{ asset('uploads/avatars/' ~ app.user.avatar)}}" alt="writeCommentAvatar" onerror="showDefaultIcon(this)">
                <div class="d-flex flex-row w-100">
                    <input type="text" name="message" class="form-control comment-input mb-1" placeholder="Write a comment..."
                           style="border-bottom-right-radius: 0; border-top-right-radius: 0;">
                    <div class="d-none d-sm-flex justify-content-end position-relative">
                        <button type="button" class="btn btn-light btn-sm px-3 emoji-toggle-btn"
                                style="height: 2.575rem; border-bottom-left-radius: 0; border-top-left-radius: 0; background-color: #252c35;">
                            <i class='bx bx-happy-beaming' style='color:#ffffff; font-size: 24px'></i>
                        </button>
                    </div>
                    <div class="gif-container me-1 d-flex position-relative">
                        <button type="button" class="btn btn-light btn-sm text-white gif-toggle-btn"
                                style="height: 2.575rem; font-size: 20px; border-bottom-left-radius: 0; border-top-left-radius: 0; background-color: #2A3038;font-weight: bold"
                                data-bs-toggle="modal"
                                data-bs-target="#gifCommentModal"
                                data-note-id="{{ note.id }}">
                            GIF
                        </button>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-light btn-sm px-3" style="height: 40px;">Post</button>
                    </div>
                </div>
            </div>
            <div class="alert alert-danger alert-dismissible fade show comment-error d-none mt-2" role="alert">
                <span class="error-message"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="emoji-list position-absolute p-2 rounded" style="display:none; background-color: #2A3038; bottom: 100%; right: 0; max-height: 200px; overflow-y: auto; z-index: 1000;"></div>
            {# GIF PREVIEW #}
            <div class="gif-preview-container d-none mt-2 mb-2"
                 id="gif-preview-container-{{ note.id }}"
                 style="position: relative; width: 100%;">
                <div class="d-flex flex-column align-items-center">
                    <div class="gif-wrapper position-relative d-inline-block">
                        <button type="button"
                                class="btn-close btn-close-white gif-preview-clear position-absolute top-0 end-0"></button>
                        <img class="gif-preview img-fluid"
                             id="gif-preview-{{ note.id }}"
                             src=""
                             alt="Selected GIF"
                             style="border: 1px solid #fff; height: auto; max-height: 300px; width: auto; display: block;">
                        <input type="hidden" name="gif_url" class="gif-url-input" id="gif-url-{{ note.id }}">
                        <p class="bg-light text-dark text-center m-0"
                           style="border-radius: 0 0 0.375rem 0.375rem; width: 100%;">
                            Preview
                        </p>
                    </div>
                </div>
            </div>
        </form>

        <div class="new-comments"></div>

        {# COMMENTS LIST #}
        <div id="comments-list-{{ note.id }}">
            {% for comment in comments %}
                <div class="d-flex flex-row mb-3" data-note-id="{{ comment.note.id }}">
                    <a class="nav-link me-2" href="{{ path('app_profile', {'id': comment.user.id}) }}">
                        <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" alt="avatarComment" onerror="showDefaultIcon(this)">
                    </a>
                    <div class="ms-2 p-0">
                        <div class="d-flex flex-row" style="height: 30px;">
                            <a class="m-0 p-0 text-decoration-none text-white" href="{{ path('app_profile', {'id': comment.user.id}) }}">
                                <p class="text-white me-2" style="font-size: 18px;">@{{ comment.user.nametag }}</p>
                            </a>
                            {% if comment.isEdited %}
                                <i class="fa fa-clock-o text-gray me-1" style="margin-top: 6px"></i>
                            {% else %}
                                <p class="text-gray mt-1 me-2">•</p>
                            {% endif %}
                            <p class="text-gray mt-1">{{ comment.humanTimeComment }}</p>
                        </div>
                        <div class="d-inline-flex align-items-center">
                            <div class="d-flex flex-column">
                                {% if comment.message %}
                                    <small class="d-inline-block" style="font-size: 16px; align-self: flex-start; max-width: 300px; color: #404040; background-color: #ffffff; border-radius: 8px; opacity: 0.9; padding: 5px;">
                                        {{ comment.message }}
                                    </small>
                                {% endif %}
                                {% if comment.image %}
                                    <div class="comment-gif-container mb-1" style="width: 100%; max-width: 200px;">
                                        <img src="{{ comment.image }}"
                                             alt="GIF"
                                             style="width: 100%; height: auto; object-fit: contain; border-radius: 8px; display: block;">
                                    </div>
                                {% endif %}
                            </div>
                            {# UPVOTE FORM #}
                            <div class="d-flex flex-column ms-2">
                                <button class="btn btn-sm ms-2 d-flex align-items-center border-0 comment-upvote-btn
                                                            {% if commentVotesMap is defined and commentVotesMap[comment.id] is defined and commentVotesMap[comment.id] == 'upvote' %}
                                                                    btn-light
                                                            {% else %}
                                                                btn-outline-light
                                                            {% endif %}"
                                        type="button"
                                        data-note-id="{{ comment.note.id }}"
                                        data-comment-id="{{ comment.id }}"
                                        data-csrf="{{ csrf_token('vote') }}">
                                    <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                    <span id="comment-upvotes-{{ comment.id }}" class="ms-1">{{ comment.upVote ?? 0 }}</span>
                                </button>
                            </div>
                            <button class="btn btn-sm d-flex align-items-center border-0"
                                    type="button"
                                    data-bs-toggle="modal" data-bs-target="#newCommentReplyModal" data-comment-id="{{ comment.id }}"
                                    data-comment-message="{{ comment.message }}"
                                    data-username="{{ comment.user.nametag }}"
                                    data-comment-img="{{ comment.image }}"
                            >
                                <i class='bx bx-message-circle-plus' style='color:#ffffff; font-size: 20px;'></i>
                                <span class="ps-2">{{ comment.commentReplies|length }}</span>
                            </button>
                        </div>
                    </div>
                    <div class="dropdown ms-auto me-1 d-inline-flex justify-content-end">
                        <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="height: 30px;">
                            <i class='bx bx-dots-horizontal-rounded' style='color:#ffffff'></i>
                        </a>
                        <ul class="dropdown-menu m-0">
                            {% if app.user.nametag == comment.user.nametag %}
                                <li><a class="dropdown-item" href="{{ path('note_comment_update', {id: comment.id, noteId: note.id}) }}">Edit...</a></li>
                                <li><a class="dropdown-item delete-comment-btn" href="{{ path('note_comment_delete', {id: comment.id, noteId: note.id}) }}">Delete comment</a></li>
                            {% else %}
                                <li><a class="dropdown-item" href="{{ path('note_comment_report', {id: comment.id, noteId: note.id}) }}">Report</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="modal fade" id="gifCommentModal" tabindex="-1" aria-labelledby="gifCommentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-custom">
        <div class="modal-content" style="background-color: #181b20; color: white; border-radius: 5px;">
            <div class="modal-header">
                <h5 class="modal-title" id="gifCommentModalLabel">Select a GIF</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" class="form-control gif-search mb-2" placeholder="Search GIFs...">
                <div class="gif-results d-grid gap-2" style="grid-template-columns: repeat(3, 1fr);"></div>
            </div>
        </div>
    </div>
</div>
{# COMMENT REPLY #}
<div class="modal fade" id="newCommentReplyModal" tabindex="-1" aria-hidden="true" style="overflow-y: hidden;">
    <div class="modal-dialog" style="max-width: 850px; margin-top: 50px">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">Reply to @<span id="reply-username"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4" style="max-height: 70vh; overflow-y: auto;">
                <div id="parent-comment-message"
                     class="d-inline-block mb-3"
                     style="font-size: 20px; font-weight: bold; align-self: flex-start; max-width: 300px;
                                color: #404040; background-color: #ffffff; border-radius: 8px;
                                opacity: 0.9; padding: 5px; display: none;">
                </div>
                <div style="position: relative; width: 100%;">
                    <img id="parent-comment-img" src="" style="height: auto; max-height: 300px; width: auto;" alt="reply-gif">
                </div>
                <form class="ajax-reply-form mt-3" id="reply-form" method="POST" action="">
                    <input type="hidden" name="_token" value="{{ csrf_token('reply') }}">
                    <input type="hidden" name="parent_comment_id" id="parent-comment-id">
                    <div class="d-inline-flex flex-row p-0" style="width: 100%;">
                        <textarea class="form-control" name="message" rows="3" placeholder="Write your reply..."></textarea>
                        <button type="submit" class="btn btn-light">Reply</button>
                    </div>
                </form>
                <h3 class="mt-3">Replies</h3>
                <div class="new-replies mt-3" id="replies-container"></div>
            </div>
        </div>
    </div>
</div>
<script src="{{ asset('../assets/js/comment-replies-modal.js') }}"></script>