{% extends 'base.html.twig' %}

{% block title %}Update comment - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center mb-4">
                {# NOTES LIST #}
                <div class="row justify-content-center mb-4">
                    {# NOTE #}
                    {% if note is defined %}
                        <div class="col-lg-7 mt-5 p-0 d-flex flex-row" style="background-color: #354765; border-bottom-right-radius: none; border-bottom-left-radius: none; border-top-right-radius: 5px; border-top-left-radius: 5px; margin-top: 2rem;">
                            <p class="text-gray ms-2 mt-1 mb-1">Edit comment...</p>
                        </div>
                        <div class="col-lg-7 ps-4 pe-4 pb-3" style="background-color: #181b20; border-bottom-right-radius: 5px; border-bottom-left-radius: 5px; border-top-right-radius: none; border-top-left-radius: none;">
                            {# NOTE PROFILE #}
                            <div class="navbar-profile p-2 ps-3 d-flex flex-row text-light mb-3" style="width: 100%;">
                                <a class="nav-link me-3 mt-2" id="avatarNote" href="#">
                                    <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ note.user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                </a>
                                <div class="d-flex flex-column">
                                    <a class="nav-link mt-3" id="nametagNote" href="#">
                                        <h5 class="mb-0 d-none d-sm-block navbar-profile-name">@{{ note.user.nametag }}</h5>
                                    </a>
                                    <div class="d-flex flex-column m-0 p-0" style="font-size: 12px; color: gray">
                                        <div class="d-flex flex-row m-0 p-0">
                                            {% if note.isEdited %}
                                                <i class="fa fa-clock-o mt-1 me-1"></i>
                                            {% endif %}
                                            <p>{{ note.humanTimePost }}</p>
                                        </div>
                                        {% if note.ring %}
                                            <p class="me-1" style="margin-top: -17px">from
                                                <a href="{{ path('app_ring_show', {'id': note.ring.id}) }}" style="text-decoration: none; color: white">
                                                    {{ note.ring.title }}
                                                </a>
                                            </p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="dropdown ms-auto mt-1 me-1">
                                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-sort-desc" style="color: white"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        {% if app.user.nametag == note.user.nametag %}
                                            <li><a class="dropdown-item" href="{{ path('app_note_update', {id: note.id}) }}">Edit...</a></li>
                                            <li>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteNoteModal" data-note-id="{{ note.id }}">
                                                    Delete note
                                                </a>
                                            </li>
                                        {% else %}
                                            <li><a class="dropdown-item" href="{{ path('app_note_report', {id: note.id}) }}">Report</a></li>
                                        {% endif %}
                                    </ul>
                                    <!-- Modal delete note -->
                                    <div class="modal fade" id="deleteNoteModal" tabindex="-1" aria-labelledby="deleteNoteModalLabel" aria-hidden="true" style="overflow-y: hidden;">
                                        <div class="modal-dialog">
                                            <div class="modal-content border-warning">
                                                <div class="modal-header bg-warning text-white">
                                                    <h5 class="modal-title" id="deleteNoteModalLabel">Confirm note deletion</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this note?
                                                </div>
                                                <div class="modal-footer">
                                                    <form method="post" id="deleteNoteForm" action="{{ path('app_note_delete', {id: note.id}) }}">
                                                        <input type="hidden" name="_token" id="deleteTokenInput" value="">
                                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-warning">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {# NOTE CONTENT #}
                            <div class="d-flex flex-row text-gray ps-3 mb-1">
                                <p style="font-size: 16px">{{ note.content }}</p>
                            </div>
                            {# NOTE IMAGE #}
                            {% if note.image %}
                                <div class="d-flex flex-row text-gray justify-content-center mb-2">
                                    <a href="{{ path('app_note_show', {'noteId': note.id}) }}">
                                        <img src="{{ asset('uploads/notes/' ~ note.image)}}" id="noteImage" alt="noteImage"/>
                                    </a>
                                </div>
                            {% endif %}
                            {# NOTE NAV – DESKTOP & MOBILE HYBRID #}
                            <div class="d-flex flex-wrap align-items-center text-gray mt-2 mb-1 ms-0 ps-0">
                                {# VOTE & COMMENTS – ALWAYS SHOWN #}
                                <div class="d-flex flex-row flex-wrap">
                                    {# UPVOTE #}
                                    <button class="upvote-btn btn btn-sm btn-outline-light d-flex align-items-center border-0" data-id="{{ note.id }}">
                                        <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                        <span class="ms-1" id="upvotes-{{ note.id }}">{{ note.getUpVote() }}</span>
                                    </button>

                                    {# DOWNVOTE #}
                                    <button class="downvote-btn btn btn-sm btn-outline-light d-flex align-items-center border-0" data-id="{{ note.id }}">
                                        <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                                        <span class="ms-1" id="downvotes-{{ note.id }}">{{ note.getDownVote() }}</span>
                                    </button>

                                    {# COMMENTS BUTTON #}
                                    <button type="button"
                                            class="btn btn-outline-light btn-sm d-flex flex-row align-items-center border-0 ps-2 pe-2 ms-1 toggle-comments compact-btn"
                                            data-note-id="{{ note.id }}">
                                        <i class='bx bx-message-circle-reply pe-1'></i>
                                        <span class="comment-count">{{ note.comments|length }}</span>
                                    </button>

                                    <div class="ms-2 me-2 pt-1 d-none d-md-block">
                                        <p class="text-white" style="margin-top: 7px">•</p>
                                    </div>

                                    {# NOTE MENTIONED – SHOWN ONLY ON DESKTOP #}
                                    <div class="d-none d-md-block ps-1 pe-1" style="margin-top: 10px">
                                        <p class="mb-0 mt-0 text-white" style="font-size: 16px">
                                            mentioned
                                            {% if note.mentionedUserId %}
                                                <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUserId}) }}" style="text-decoration: none;">
                                                    <b style="background-color: #2A3038">@{{ note.nametag }}</b>
                                                </a>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                                {# NOTE MENTIONED – SHOWN ONLY ON MOBILE, BELOW BUTTONS #}
                                <div class="d-block d-md-none w-100 mt-2 ps-3 pe-1 mb-2">
                                    <p class="text-white" style="margin-bottom: -2px; font-size: 16px">
                                        mentioned
                                        {% if note.mentionedUserId %}
                                            <a class="m-0 p-0 text-white" href="{{ path('app_profile', {'id': note.mentionedUserId}) }}" style="text-decoration: none;">
                                                <b style="background-color: #2A3038">@{{ note.nametag }}</b>
                                            </a>
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                            {# NOTE COMMENT #}
                            <div class="note-comments" id="comments-{{ note.id }}">
                                {# COMMENT #}
                                <div class="d-flex flex-row mb-3">
                                    <a class="nav-link me-2" href="#">
                                        <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" alt="avatarComment" onerror="showDefaultIcon(this)">
                                    </a>
                                    <div class="m-0 p-0" style="width: 100%">
                                        <div class="d-flex flex-row" style="height: 30px;">
                                            <p class="text-white m-0" style="font-size: 18px;">@{{ comment.user.nametag }}</p>
                                            <p class="text-gray ms-1 me-1 mt-1">•</p>
                                            <p class="text-gray mt-1">{{ comment.humanTimeComment  }}</p>
                                        </div>
                                        <form method="POST" style="width: 100%" action="{{ path('note_comment_update', {id: comment.id, noteId: note.id}) }}" enctype="multipart/form-data">
                                            <div class="d-inline-flex" style="width: 100%">
                                                <textarea name="message" id="message" class="form-control" rows="4" required>{{ comment.message }}</textarea>
                                            </div>

                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-success" name="update_comment_btn">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-lg-7 pt-4 ps-4 pe-4" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                            <p class="text-light">Oops. No notes available here.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}