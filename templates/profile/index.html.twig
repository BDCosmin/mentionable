{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center mb-4">
            <div class="col-12 p-3" style="background-color: #181b20; border-radius: 5px;">
                <h1 class="text-center text-white mb-5">My Profile</h1>

                <!-- Informații + Setări -->
                <div class="row g-4 bg-dark rounded p-4 shadow">
                    <!-- Col stânga: Informații -->
                    <div class="col-md-6 text-center text-md-start">
                        <h4 class="text-white">Profile Information</h4>
                        <p class="text-muted"><strong>Nametag:</strong> {{ user.nametag }}</p>
                        {% if user.avatar %}
                            <p class="text-muted"><strong>Avatar:</strong><br><img src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="Avatar" class="img-thumbnail rounded-circle mt-3" style="width: 120px; height: 120px;">
                        {% else %}
                            <i class="fa fa-user text-white display-4 mt-3"></i>
                        {% endif %}
                    </div>

                    <!-- Col dreapta: Setări -->
                    <div class="col-md-6">
                        <h4 class="text-white text-center">Profile Settings</h4>
                        <div class="d-grid gap-3 mt-3">
                            <a href="{{ path('app_profile_change_password') }}" class="btn btn-primary">Change Password</a>
                            <a href="{{ path('app_profile_edit') }}" class="btn btn-secondary">Change Avatar</a>
                        </div>
                    </div>
                </div>

                <!-- Prieteni -->
                <div class="mt-5 bg-dark rounded p-4 shadow text-white">
                    <h4 class="mb-4">My Friends</h4>
                    {% if user.friends is not empty %}
                        <div class="row g-4 flex-column">
                            {% for friend in user.friends %}
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="card bg-secondary h-100 border-0 shadow-sm">
                                        <div class="card-body d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center">
                                                {% if friend.avatar %}
                                                    <img src="{{ asset('uploads/avatars/' ~ friend.avatar) }}" alt="Avatar" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                                                {% else %}
                                                    <i class="fa fa-user text-white pt-2 ps-2"></i>
                                                {% endif %}
                                                <span class="fw-bold text-dark">{{ friend.nametag }}</span>
                                            </div>
                                            <a href="{{ path('app_profile_remove_friend', {'id': friend.id}) }}" class="btn btn-sm btn-outline-danger">Delete</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted">You have no friends added.</p>
                    {% endif %}
                </div>

                <!-- Adaugă prieten -->
                <div class="mt-4 bg-dark rounded p-4 shadow text-white">
                    <h4 class="mb-3">Add a Friend</h4>
                    {% for label, messages in app.flashes %}
                        {% set bootstrap_class = label == 'error' ? 'danger' : label %}
                        {% for message in messages %}
                            <div class="alert alert-{{ bootstrap_class }} alert-dismissible fade show mt-3" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <form action="{{ path('app_profile_add_friend_by_nametag') }}" method="post" class="row g-2">
                        <div class="col-md-9">
                            <input type="text" name="friend_nametag" placeholder="Enter friend's nametag" class="form-control">
                        </div>
                        <div class="col-md-3 d-grid">
                            <button type="submit" class="btn btn-success">Send Request</button>
                        </div>
                    </form>
                </div>

                <!-- Cereri de prietenie -->
                <div class="mt-4 bg-dark rounded p-4 shadow text-white">
                    <h4 class="mb-3">Friend Requests Received</h4>
                    {% if friendRequests is not empty %}
                        <ul class="list-group">
                            {% for request in friendRequests %}
                                <li class="list-group-item bg-secondary text-dark fw-bold d-flex justify-content-between align-items-center">
                                    {{ request.sender.nametag }}
                                    <div>
                                        <a href="{{ path('app_profile_accept_friend', {'id': request.id}) }}" class="btn btn-sm btn-success me-2">Accept</a>
                                        <a href="{{ path('app_profile_reject_friend', {'id': request.id}) }}" class="btn btn-sm btn-danger">Decline</a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">No friend requests received.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}