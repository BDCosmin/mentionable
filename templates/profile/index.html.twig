{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center mb-4">
                <div class="col-12 p-3" style="background-color: #181b20; border-radius: 5px;">
                    {% for label, messages in app.flashes %}
                        {% set bootstrap_class = label == 'error' ? 'danger' : label %}
                        {% for message in messages %}
                            <div class="alert alert-{{ bootstrap_class }} alert-dismissible fade show mt-3" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <div class="row g-4 bg-dark rounded ps-4 pe-4 pb-4 shadow" style="margin-top: -7px">
                        <div class="col-md-4 text-center text-md-start">
                            {% if user.avatar %}
                                <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}"
                                     alt="Avatar"
                                     class="img-thumbnail rounded-circle mt-3"
                                     style="width: 400px; height: 400px;"
                                     onerror="showDefaultIcon(this)"/>
                            {% else %}
                                <img src="{{ asset('uploads/avatars/default.jpeg') }}"
                                     alt="Avatar"
                                     class="img-thumbnail rounded-circle mt-3"
                                     style="width: 400px; height: 400px;"/>
                            {% endif %}
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex flex-row">
                                <h2 class="mt-3 mb-3 text-white"><strong>@</strong>{{ user.nametag }}</h2>
                                {% if app.user.friends|filter(f => f.id == user.id) is empty %}
                                    <form action="{{ path('app_profile_add_friend') }}" method="post" class="row g-2">
                                        <input type="hidden" name="friend_id" value="{{ user.id }}" />
                                        <button type="submit" class="btn btn-sm btn-light ms-3 mt-4" style="height: 30px">
                                            Add
                                        </button>
                                    </form>
                                {% else %}
                                    <form action="{{ path('app_profile_remove_friend') }}" method="post" class="row g-2">
                                        <input type="hidden" name="friend_id" value="{{ user.id }}" />
                                        <button type="submit" class="btn btn-sm btn-light ms-3 mt-4" style="height: 30px">
                                            Remove
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                            <h4 class="text-gray">Profile Information</h4>
                            <p>Joined on {{ user.creationDate|date('d.m.Y') }}</p>
                            {% if user.isVerified %}
                                <div class="d-flex flex-row">
                                    <i class='count fa fa-check-circle me-2'></i>
                                    <p>verified</p>
                                </div>
                            {% endif %}
                            <a href="#">
                                <p>{{ user.friends|length }} friends</p>
                            </a>
                        </div>
                    </div>

                    {% if user.id == app.user.id %}
                        <div class="mt-5 bg-dark rounded p-4 shadow text-white">
                            <h4 class="mb-4">My Friends</h4>
                            {% if user.friends is not empty %}
                                <div class="row g-4 flex-column">
                                    {% for friend in user.friends %}
                                        <div class="col-12 col-md-6 col-lg-4">
                                            <div class="card bg-secondary h-100 border-0 shadow-sm">
                                                <div class="card-body d-flex align-items-center justify-content-between">
                                                    <div class="d-flex align-items-center">
                                                        {% if friend.avatar %}
                                                            <img src="{{ asset('uploads/avatars/' ~ friend.avatar) }}"
                                                                 alt="Avatar"
                                                                 class="img-thumbnail rounded-circle me-3 mt-1"
                                                                 style="width: 50px; height: 50px; object-fit: cover;"/>
                                                        {% else %}
                                                            <img src="{{ asset('uploads/avatars/default.jpg') }}"
                                                                 alt="Avatar"
                                                                 class="img-thumbnail rounded-circle mt-3"
                                                                 style="width: 400px; height: 400px;"/>
                                                        {% endif %}
                                                        <span class="fw-bold text-dark">{{ friend.nametag }}</span>
                                                    </div>
                                                    <a href="{{ path('app_profile_remove_friend', {'id': friend.id}) }}" class="btn btn-sm btn-outline-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <p class="text-muted">You have no friends added.</p>
                            {% endif %}
                        </div>

                        <div class="mt-4 bg-dark rounded p-4 shadow text-white">
                            <h4 class="mb-3">Add a Friend</h4>
                            <form action="{{ path('app_profile_add_friend') }}" method="post" class="row g-2">
                                <div class="col-md-9">
                                    <input type="text" name="friend_nametag" placeholder="Enter friend's nametag" class="form-control">
                                </div>
                                <div class="col-md-3 d-grid">
                                    <button type="submit" class="btn btn-success">Send Request</button>
                                </div>
                            </form>
                        </div>

                        <div class="mt-4 bg-dark rounded p-4 shadow text-white">
                            <h4 class="mb-3">Friend Requests Received</h4>
                            {% if friendRequests is not empty %}
                                <ul class="list-group">
                                    {% for request in friendRequests %}
                                        <li class="list-group-item bg-secondary text-dark fw-bold d-flex justify-content-between align-items-center">
                                            {{ request.sender.nametag }}
                                            <div>
                                                <a href="{{ path('app_profile_accept_friend', {'id': request.id}) }}" class="btn btn-sm btn-success me-2">Accept</a>
                                                <a href="{{ path('app_profile_reject_friend', {'id': request.id}) }}" class="btn btn-sm btn-danger">Decline</a>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="text-muted">No friend requests received.</p>
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="row g-4 ps-4 pe-4 pb-4 shadow" style="margin-top: -7px">
                            <div class="col-md-8">
                                <h4 class="mt-5 text-center text-md-center">Notes</h4>
                                <div class="mt-3 bg-dark rounded p-4 shadow text-white">
                                    notesssssss
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h4 class="mt-5 text-center text-md-center">Rings</h4>
                                <div class="mt-3 bg-dark rounded p-4 shadow text-white">
                                    ringsssssss
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}