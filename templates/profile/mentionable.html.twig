{% extends 'base.html.twig' %}

{% block title %}News - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center px-0 mb-4 mt-5">
                <div class="col-12 w-100 p-3" style="background-color: #181b20; border-radius: 5px;">
                    {% for label, messages in app.flashes %}
                        {% set bootstrap_class = label == 'error' ? 'danger' : label %}
                        {% for message in messages %}
                            <div class="alert alert-{{ bootstrap_class }} alert-dismissible fade show mt-3" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <div class="row flex-column flex-md-row g-4 bg-dark rounded ps-4 pe-4 pb-4 shadow" style="margin-top: -7px">
                        <div class="col-md-4 text-center text-md-start">
                            <div class="avatar-pic">
                                <div class="avatar-indicator position-relative d-inline-block">
                                    <img src="{{ asset('uploads/avatars/' ~ user.avatar) }}"
                                         alt="Avatar"
                                         class="img-thumbnail img-fluid rounded-circle mt-3"
                                         style="width: 400px; height: auto;"
                                         onerror="showDefaultAvatar(this)"/>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="d-flex flex-column flex-md-row mb-2 align-items-start align-items-md-center">
                                <div class="d-flex flex-row m-0 p-0">
                                    <h2 class="mt-4 text-white"><strong>@</strong>{{ user.nametag }}</h2>
                                    {% if user.isVerified %}
                                        <i class='count fa fa-check-circle ms-2' style="margin-top: 30px; font-size: 28px"></i>
                                    {% endif %}
                                </div>
                                {% if app.user.id is not same as(user.id) %}
                                    {% if app.user not in user.friends %}
                                        <form action="{{ path('app_profile_add_friend', {'id': user.id}) }}" method="post">
                                            <input type="hidden" name="friend_id" value="{{ user.id }}" />
                                            <button type="submit" class="btn btn-sm btn-light ms-0 ms-md-4 mt-1 mt-md-3" style="width: 75px; height: 30px;">
                                                Follow
                                            </button>
                                        </form>
                                    {% else %}
                                        <form action="{{ path('app_profile_remove_friend', {'id': user.id}) }}" method="post" class="row g-2">
                                            <input type="hidden" name="friend_id" value="{{ user.id }}" />
                                            <button type="submit" class="btn btn-sm btn-outline-light ms-0 ms-md-4 mt-1 mt-md-3" style="height: 30px; border: 1px solid #fff;">
                                                Unfollow
                                            </button>
                                        </form>
                                    {% endif %}
                                {% endif %}
                            </div>
                            <p class="mt-3" style="font-size: 15px; font-weight: bold; user-select: none">
                                {{ user.friends|length }}
                                {% if user.friends|length == 1 %}
                                    subscriber
                                {% else %}
                                    subscribers
                                {% endif %}
                            </p>

                            {# INTERESTS #}
                            {% if app.user.id is same as(user.id) %}
                                <h4 class="text-gray mt-3">Interests</h4>
                                <div class="d-flex flex-wrap gap-2 m-0 p-1 rounded">
                                    {% for interest in interests %}
                                        <div class="bg-light px-2 py-1 text-dark rounded-pill" style="user-select: none">
                                            <a href="{{ path('app_interest_show', { id: interest.id }) }}" class="text-dark" style="text-decoration: none;">
                                                #{{ interest }}
                                            </a>
                                            <a href="#" class="delete-interest text-dark ms-2" data-interest-id="{{ interest.id }}" style="text-decoration: none; font-weight: bold;">x</a>
                                        </div>
                                    {% endfor %}
                                    <a class="bg-white px-2 py-1 text-dark rounded-pill" style="text-decoration: none;" href="#"
                                       data-bs-toggle="modal"
                                       data-bs-target="#addInterestModal">
                                        <b class="ms-1 me-1">+</b>
                                    </a>
                                    <div class="modal fade" id="addInterestModal" tabindex="-1" aria-labelledby="addInterestModalLabel" aria-hidden="true" style="overflow-y: hidden;">
                                        <div class="modal-dialog">
                                            <div class="modal-content border-success">
                                                <div class="modal-header bg-success text-white">
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="m-0 p-0">Add an interest for your profile so people can find out what you like.</p>
                                                    <p class="mb-4 mt-0 pt-0">Note: An interest tag cannot contain blank spaces.</p>
                                                    <form method="POST" enctype="multipart/form-data" action="{{ path('app_interest_new') }}" id="addInterestForm">
                                                        <textarea name="interest-content" id="interest-content" placeholder="Write..." class="form-control mb-4" style="height: 45px;" required></textarea>
                                                        <div class="d-flex justify-content-end">
                                                            <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal" aria-label="Close">Close</button>
                                                            <button type="submit" class="btn btn-success" style="width: 120px;">Add</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                {% if interests is not empty %}
                                    <h4 class="text-gray mt-3">Interests</h4>
                                    <div class="d-flex flex-wrap gap-2 m-0 p-1 rounded">
                                        {% for interest in interests %}
                                            <div class="bg-light px-2 py-1 text-dark rounded-pill" style="user-select: none">
                                                <a href="{{ path('app_interest_show', { id: interest.id }) }}" class="text-dark" style="text-decoration: none;">
                                                    #{{ interest }}
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>

                    <div class="row g-4 ps-1 pe-1 pb-4 shadow d-flex justify-content-center" style="margin-top: -7px">
                        <div class="col-md-9 col-12">
                            <h4 class="mt-5 text-center text-md-center text-light">UPDATES</h4>
                            {# NOTES LIST #}
                            {% if notesWithMentionedUser is defined and notesWithMentionedUser|length > 0 %}
                                {% for item in notesWithMentionedUser %}
                                    {# NOTE #}
                                    <div class="bg-dark rounded p-4 shadow mb-3 pt-4 ps-4 pe-4 pb-3" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                                        {# NOTE PROFILE #}
                                        <div class="navbar-profile d-flex flex-row text-light p-2 ps-3 mb-3" style="width: 100%;">
                                            <a class="nav-link me-3 mt-2" id="avatarNote" href="{{ path('app_profile', {'id': item.note.user.id}) }}">
                                                <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ item.note.user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                            </a>
                                            <div class="d-flex flex-column">
                                                <a class="nav-link mt-3" id="nametagNote" href="{{ path('app_profile', {'id': item.note.user.id}) }}">
                                                    <h5 class="mb-0 navbar-profile-name">@{{ item.note.user.nametag }}</h5>
                                                </a>
                                                <div class="d-flex flex-column m-0 p-0" style="font-size: 12px; color: gray">
                                                    <div class="d-flex flex-row m-0 p-0">
                                                        {% if item.note.isEdited %}
                                                            <i class="fa fa-clock-o mt-1 me-1"></i>
                                                        {% endif %}
                                                        <p>{{ item.note.humanTimePost }}</p>
                                                        <p class="ms-1 me-1">•</p>
                                                        <a class="m-0 p-0" style="text-decoration: none; color: #d1d0d0" href="{{ path('app_note_show', {'noteId': item.note.id}) }}">
                                                            <p>View</p>
                                                        </a>
                                                    </div>
                                                    {% if item.note.ring %}
                                                        <p class="me-1 mb-1" style="margin-top: -17px">from
                                                            <a href="{{ path('app_ring_show', {'id': item.note.ring.id}) }}" style="text-decoration: none; color: white">
                                                                {{ item.note.ring.title }}
                                                            </a>
                                                        </p>
                                                        {% set key = item.note.user.id ~ '_' ~ item.note.ring.id %}
                                                        {% set role = roles[key]|default('Member') %}
                                                        <div class="d-flex align-items-center" style="gap: 3px; font-size: 13px;">
                                                            <p class="mb-0 text-muted" style="white-space: nowrap;">Role:</p>
                                                            {% set bgColor = role == 'member' ? '#6c757d' : 'orange' %}
                                                            <span style="
                                                                    background-color: {{ bgColor }};
                                                                    color: white;
                                                                    padding: 2px 8px;
                                                                    border-radius: 12px;
                                                                    font-weight: 600;
                                                                    text-transform: capitalize;
                                                                    white-space: nowrap;">
                                                                        {{ role|capitalize }}
                                                                    </span>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            {% if item.note.user.id != 24 or (item.note.user.id == 24 and app.user.id == 24) %}
                                                <div class="dropdown ms-auto mt-1 me-1">
                                                    <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none;">
                                                        <i class="fa fa-sort-desc" style="color: white"></i>
                                                    </a>
                                                    <ul class="dropdown-menu">
                                                        {% if app.user.nametag == item.note.user.nametag %}
                                                            <li>
                                                                <a class="dropdown-item" href="{{ path('app_note_update', {id: item.note.id}) }}">Edit...</a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item" href="#"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#deleteNoteModal"
                                                                   data-note-id="{{ item.note.id }}"
                                                                   data-note-token="{{ csrf_token('delete' ~ item.note.id) }}">
                                                                    Delete note
                                                                </a>
                                                            </li>
                                                        {% elseif item.note.user.id != 24 and app.user.nametag != item.note.user.nametag %}
                                                            <li>
                                                                <a class="dropdown-item" href="{{ path('app_note_report', {id: item.note.id}) }}">Report</a>
                                                            </li>
                                                        {% endif %}
                                                    </ul>
                                                    {# FAVORITE BUTTON #}
                                                    <button class="favorite-btn btn btn-sm ms-1
                                                            {% if favoritesMap[item.note.id] %}
                                                                btn-warning
                                                            {% else %}
                                                                btn-outline-warning
                                                            {% endif %}"
                                                            data-id="{{ item.note.id }}"
                                                            style="border-radius: 50%">
                                                        <i class="bx {% if favoritesMap[item.note.id] %}bxs-star{% else %}bx-star{% endif %}" style="font-size: 18px; margin-top: 5px;"></i>
                                                    </button>
                                                    <div class="modal fade" id="deleteNoteModal" tabindex="-1" aria-labelledby="deleteNoteModalLabel" aria-hidden="true" style="overflow-y: hidden;">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content border-danger">
                                                                <div class="modal-header bg-danger text-white">
                                                                    <h5 class="modal-title" id="deleteNoteModalLabel">Confirm note deletion</h5>
                                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    Are you sure you want to delete this note?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form method="post" id="deleteNoteForm" action="">
                                                                        <input type="hidden" name="_token" id="deleteTokenInput" value="">
                                                                        <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="dropdown ms-auto mt-1 me-1">
                                                    {# FAVORITE BUTTON #}
                                                    <button class="favorite-btn btn btn-sm ms-1
                                                            {% if favoritesMap[item.note.id] %}
                                                                btn-warning
                                                            {% else %}
                                                                btn-outline-warning
                                                            {% endif %}"
                                                            data-id="{{ item.note.id }}"
                                                            style="border-radius: 50%">
                                                        <i class="bx {% if favoritesMap[item.note.id] %}bxs-star{% else %}bx-star{% endif %}" style="font-size: 18px; margin-top: 5px;"></i>
                                                    </button>
                                                </div>
                                            {% endif %}
                                        </div>
                                        {# NOTE CONTENT #}
                                        <div class="d-flex flex-row text-white ps-3 mb-1">
                                            <p style="font-size: 16px; white-space: pre-wrap;">{{ item.note.content }}</p>
                                        </div>
                                        {# NOTE IMAGE #}
                                        {% if item.note.image %}
                                            <div class="d-flex flex-row text-gray justify-content-center mb-2">
                                                <a href="{{ path('app_note_show', {'noteId': item.note.id}) }}">
                                                    <img
                                                            {% if item.note.image starts with 'https://' %}
                                                                src="{{ item.note.image }}"
                                                            {% else %}
                                                                src="{{ asset('uploads/notes/' ~ item.note.image)}}"
                                                            {% endif %}
                                                            class="img-fluid" id="noteImage" alt="noteImage" onerror="showDefaultImage(this)"
                                                    />
                                                </a>
                                            </div>
                                        {% endif %}
                                        {# NOTE NAV – DESKTOP & MOBILE HYBRID #}
                                        <div class="d-flex flex-wrap align-items-center text-gray mt-2 mb-1 ms-0 ps-0">
                                            {# VOTE & COMMENTS – ALWAYS SHOWN #}
                                            <div class="d-flex flex-row flex-wrap">
                                                {# UPVOTE #}
                                                <button class="upvote-btn btn btn-sm d-flex align-items-center border-0
                                                            {% if votesMap[item.note.id] is defined and votesMap[item.note.id] == 'upvote' %}
                                                                btn-light
                                                            {% else %}
                                                                btn-outline-light
                                                            {% endif %}"
                                                        data-id="{{ item.note.id }}">
                                                    <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                                    <span class="ms-1" id="upvotes-{{ item.note.id }}">{{ item.note.getUpVote() }}</span>
                                                </button>

                                                {# DOWNVOTE #}
                                                <button class="downvote-btn btn btn-sm d-flex align-items-center border-0
                                                            {% if votesMap[item.note.id] is defined and votesMap[item.note.id] == 'downvote' %}
                                                                btn-light
                                                            {% else %}
                                                                btn-outline-light
                                                            {% endif %}"
                                                        data-id="{{ item.note.id }}">
                                                    <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                                                    <span class="ms-1" id="downvotes-{{ item.note.id }}">{{ item.note.getDownVote() }}</span>
                                                </button>

                                                {# COMMENTS BUTTON #}
                                                <button type="button"
                                                        class="btn btn-outline-light btn-sm d-flex flex-row align-items-center border-0 ps-2 pe-2 ms-1 toggle-comments compact-btn"
                                                        data-note-id="{{ item.note.id }}">
                                                    <i class='bx bx-message-circle-reply pe-1'></i>
                                                    <span class="comment-count">{{ item.note.comments|length }}</span>
                                                </button>
                                            </div>
                                        </div>

                                        {# NOTE COMMENT #}
                                        <div class="note-comments pt-3" id="comments-{{ item.note.id }}" style="display: none;">
                                            <form method="POST" action="{{ path('note_comment', {id: item.note.id}) }}" class="ajax-comment-form d-flex flex-column mb-3" style="position: relative" data-note-id="{{ item.note.id }}">
                                                <div class="d-flex flex-row align-items-center">
                                                    <img class="img-xs rounded-circle comment-avatar me-2" src="{{ asset('uploads/avatars/' ~ app.user.avatar)}}" alt="writeCommentAvatar" onerror="showDefaultIcon(this)">
                                                    <div class="d-flex flex-row w-100">
                                                        <input type="text" name="message" class="form-control comment-input mb-1" placeholder="Write a comment..."
                                                               style="border-bottom-right-radius: 0; border-top-right-radius: 0;" required>
                                                        <div class="d-none d-sm-flex justify-content-end position-relative">
                                                            <button type="button" class="btn btn-light btn-sm px-3 emoji-toggle-btn"
                                                                    style="height: 2.575rem; border-bottom-left-radius: 0; border-top-left-radius: 0; background-color: #252c35;">
                                                                <i class='bx bx-happy-beaming' style='color:#ffffff; font-size: 24px'></i>
                                                            </button>
                                                        </div>
                                                        <div class="gif-container me-1 d-flex position-relative">
                                                            <button type="button" class="btn btn-light btn-sm text-white gif-toggle-btn"
                                                                    style="height: 2.575rem; font-size: 20px; border-bottom-left-radius: 0; border-top-left-radius: 0; background-color: #2A3038;font-weight: bold"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#gifCommentModal"
                                                                    data-note-id="{{ item.note.id }}">
                                                                GIF
                                                            </button>
                                                        </div>
                                                        <div class="d-flex justify-content-end">
                                                            <button type="submit" class="btn btn-light btn-sm px-3" style="height: 40px;">Post</button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="alert alert-danger alert-dismissible fade show comment-error d-none mt-2" role="alert">
                                                    <span class="error-message"></span>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>
                                                <div class="emoji-list position-absolute p-2 rounded" style="display:none; background-color: #2A3038; bottom: 100%; right: 0; max-height: 200px; overflow-y: auto; z-index: 1000;"></div>
                                                {# GIF PREVIEW #}
                                                <div class="gif-preview-container d-none mt-2 mb-2"
                                                     id="gif-preview-container-{{ item.note.id }}"
                                                     style="position: relative; width: 100%;">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <div class="gif-wrapper position-relative d-inline-block">
                                                            <button type="button"
                                                                    class="btn-close btn-close-white gif-preview-clear position-absolute top-0 end-0"></button>
                                                            <img class="gif-preview img-fluid"
                                                                 id="gif-preview-{{ item.note.id }}"
                                                                 src=""
                                                                 alt="Selected GIF"
                                                                 style="border: 1px solid #fff; height: auto; max-height: 300px; width: auto; display: block;">
                                                            <input type="hidden" name="gif_url" class="gif-url-input" id="gif-url-{{ item.note.id }}">
                                                            <p class="bg-light text-dark text-center m-0"
                                                               style="border-radius: 0 0 0.375rem 0.375rem; width: 100%;">
                                                                Preview
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            <div class="new-comments"></div>

                                            {# NOTE COMMENTS LIST #}
                                            <div id="comments-list-{{ item.note.id }}">
                                                {% for comment in limitedComments[item.note.id] %}
                                                    <div class="d-flex flex-row mb-3 comment-item" data-note-id="{{ item.note.id }}">
                                                        <a class="nav-link me-2" href="{{ path('app_profile', {'id': comment.user.id}) }}">
                                                            <img class="img-xs rounded-circle comment-avatar" src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" alt="avatarComment" onerror="showDefaultIcon(this)">
                                                        </a>
                                                        <div class="flex-grow-1">
                                                            <div class="d-flex flex-row align-items-center">
                                                                <a class="m-0 p-0 text-decoration-none text-white" href="{{ path('app_profile', {'id': comment.user.id}) }}">
                                                                    <p class="text-white me-2 mb-0" style="font-size: 16px;">@{{ comment.user.nametag }}</p>
                                                                </a>
                                                                {% if comment.isEdited %}
                                                                    <i class="fa fa-clock-o text-gray me-1" style="font-size: 14px;"></i>
                                                                {% else %}
                                                                    <p class="text-gray mb-0 me-1">•</p>
                                                                {% endif %}
                                                                <p class="text-gray mb-0" style="font-size: 14px;">{{ comment.humanTimeComment }}</p>
                                                            </div>
                                                            <div class="d-inline-flex align-items-center">
                                                                <div class="d-flex flex-column">
                                                                    {% if comment.message %}
                                                                        <small class="d-inline-block" style="font-size: 16px; align-self: flex-start; max-width: 300px; color: #404040; background-color: #ffffff; border-radius: 8px; opacity: 0.9; padding: 5px;">
                                                                            {{ comment.message }}
                                                                        </small>
                                                                    {% endif %}
                                                                    {% if comment.image %}
                                                                        <div class="comment-gif-container mb-1" style="width: 100%; max-width: 200px;">
                                                                            <img src="{{ comment.image }}"
                                                                                 alt="GIF"
                                                                                 style="width: 100%; height: auto; object-fit: contain; border-radius: 8px; display: block;">
                                                                        </div>
                                                                    {% endif %}
                                                                </div>
                                                                {# UPVOTE FORM #}
                                                                <div class="d-flex flex-row ms-2">
                                                                    <button class="btn btn-sm ms-2 d-flex align-items-center border-0 comment-upvote-btn
                                                                                    {% if commentVotesMap is defined and commentVotesMap[comment.id] is defined and commentVotesMap[comment.id] == 'upvote' %}
                                                                                            btn-light
                                                                                    {% else %}
                                                                                        btn-outline-light
                                                                                    {% endif %}"
                                                                            type="button"
                                                                            data-note-id="{{ comment.note.id }}"
                                                                            data-comment-id="{{ comment.id }}"
                                                                            data-csrf="{{ csrf_token('vote') }}">
                                                                        <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                                                        <span id="comment-upvotes-{{ comment.id }}" class="ms-1">{{ comment.upVote ?? 0 }}</span>
                                                                    </button>
                                                                    <button class="btn btn-sm d-flex align-items-center border-0"
                                                                            type="button"
                                                                            data-bs-toggle="modal" data-bs-target="#newCommentReplyModal" data-comment-id="{{ comment.id }}"
                                                                            data-comment-message="{{ comment.message }}"
                                                                            data-username="{{ comment.user.nametag }}"
                                                                            data-comment-img="{{ comment.image }}"
                                                                    >
                                                                        <i class='bx bx-message-circle-plus' style='color:#ffffff; font-size: 20px;'></i>
                                                                        <span class="ps-2">{{ comment.commentReplies|length }}</span>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="dropdown ms-auto me-1 d-flex align-items-start">
                                                            <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="height: 30px;">
                                                                <i class='bx bx-dots-horizontal-rounded' style='color:#ffffff; font-size: 20px;'></i>
                                                            </a>
                                                            <ul class="dropdown-menu m-0">
                                                                {% if app.user.nametag == comment.user.nametag %}
                                                                    <li><a class="dropdown-item" href="{{ path('note_comment_update', {id: comment.id, noteId: item.note.id}) }}">Edit...</a></li>
                                                                    <li><a class="dropdown-item delete-comment-btn" href="{{ path('note_comment_delete', {id: comment.id, noteId: item.note.id}) }}">Delete comment</a></li>
                                                                {% else %}
                                                                    <li><a class="dropdown-item" href="{{ path('note_comment_report', {id: comment.id, noteId: item.note.id}) }}">Report</a></li>
                                                                {% endif %}
                                                            </ul>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                                {% if item.note.comments|length > limitedComments[item.note.id]|length %}
                                                    <div class="text-start mt-2">
                                                        <a href="#" class="see-all-comments text-warning" data-note-id="{{ item.note.id }}">
                                                            <small>See all comments</small>
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <div class="mt-3 bg-dark rounded p-4 shadow pt-4 ps-4 pe-4 pb-3">
                                    <p class="text-light">Oops. No notes available here.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
