{% extends 'base.html.twig' %}

{% block title %}Edit profile - Mentionable{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center mb-4">
            <div class="col-lg-7 p-3" style="background-color: #181b20; border-radius: 5px;">
                <h2 class="text-center mt-2 mb-4">Edit your avatar</h2>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.avatar, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.avatar, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.avatar) }}
                </div>

                <div class="d-flex justify-content-center m-0 p-0">
                    <button type="submit" class="btn btn-light w-50">
                        Save
                    </button>
                </div>
                {{ form_end(form) }}

                <div class="mt-3">
                    <div class="locked-card">
                        <img src="{{ asset("assets/images/media/artwork-collection.png") }}" class="card-img-top" alt="Locked content">
                        <div class="overlay-content">
                            <i class="bi bi-lock-fill lock-icon"></i>
                            <h5>Coming soon...</h5>
                            <p>Unlockable packs of AI artworks for your profile and more</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}
