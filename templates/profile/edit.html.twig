{% extends 'base.html.twig' %}

{% block title %}Modifică profil{% endblock %}

{% block body %}
<div class="main-panel">
 <div class="content-wrapper">
  <div class="row justify-content-center mb-4">
    <div class="col-lg-7 p-3" style="background-color: #181b20; border-radius: 5px;">
        <h1 class="text-2xl font-bold mb-4">Modifică profilul</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'max-w-md'}}) }}
        {{ form_row(form.avatar, {'attr': {'class': 'border p-2 rounded w-full'}}) }}
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded mt-2 hover:bg-blue-600">Salvează</button>
        {{ form_end(form) }}

        <a href="{{ path('app_profile') }}" class="text-blue-500 mt-4 inline-block hover:underline">Înapoi la profil</a>
    </div>
  </div>
 </div>
</div>
{% endblock %}