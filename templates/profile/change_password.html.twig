{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row justify-content-center mb-4">
            <div class="col-12 p-3" style="background-color: #181b20; border-radius: 5px;">
                <h2 class="mb-4 text-center">Change password</h2>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.newPassword.first, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.newPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.newPassword.second, 'Confirm new password', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.newPassword.second) }}
                </div>

                <button type="submit" class="btn btn-primary w-100">Change password</button>
                {{ form_end(form) }}

                <div class="mt-4 text-center">
                    <a href="{{ path('app_profile') }}" class="text-decoration-none text-light">
                        <i class="fa fa-arrow-left me-2"></i>Back to my profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
