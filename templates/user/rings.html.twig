{% extends 'base.html.twig' %}

{% block title %}My Rings - Mentionable{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row justify-content-center mb-4">
                <div class="col-lg-8 p-3 justify-content-center">
                    <div class="d-flex flex-row justify-content-center">
                        <h1 class="text-center">
                            My Rings
                        </h1>
                        <span class="badge badge-light text-dark mt-2 ms-2" style="height: 25px">{{ ringsCount }}</span>
                    </div>
                </div>

                <div class="col-lg-7 m-0 p-0 mb-3" id="errorWhilePosting" style="display: {{ divVisibility|default('none') }};">
                    <span class="badge bg-danger">{{ error|default('') }}</span>
                </div>

                <div class="row justify-content-center mb-4">
                    {% if rings is defined and rings|length > 0 %}
                        {% for ring in rings %}
                            <div class="col-lg-7 pt-4 ps-4 pe-4 pb-3 mb-4" style="background-color: #181b20; border-radius: 5px;">
                                <div class="d-flex text-light align-items-start mb-3">

                                    <a href="{{ path('app_ring_show',{'id' : ring.id}) }}" class="me-3">
                                        <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                             alt="banner"
                                             class="rounded-circle"
                                             style="width: 60px; height: 60px; object-fit: cover;"
                                        >
                                    </a>

                                    <div class="d-flex flex-column text-muted">
                                        <a href="{{ path('app_ring_show',{'id' : ring.id}) }}" class="text-decoration-none">
                                            <h5 class="mb-1 text-white">{{ ring.title }}</h5>
                                        </a>
                                        <p style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#membersModal-{{ ring.id }}">
                                            {{ members|filter(member => member.ring.id == ring.id)|length }}
                                            {{ members|filter(member => member.ring.id == ring.id)|length == 1 ? 'member' : 'members' }}
                                        </p>
                                    </div>
                                    <!-- Modalul pentru afiÈ™area membrilor ringului -->
                                    <div class="modal fade" id="membersModal-{{ ring.id }}" tabindex="-1" aria-labelledby="membersModalLabel-{{ ring.id }}" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content bg-dark text-white">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="membersModalLabel-{{ ring.id }}">Members of {{ ring.title }}</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body" style="max-height: 300px; overflow-y: auto;">
                                                    {% set ringMembers = members|filter(member => member.ring.id == ring.id) %}
                                                    {% if ringMembers|length > 0 %}
                                                        <ul class="list-group list-group-flush">
                                                            {% for member in ringMembers %}
                                                                <div class="d-flex flex-row m-0 p-0 mb-1 mt-2">
                                                                    <a href="{{ path('app_profile', {id: user.id}) }}" class="ms-3">
                                                                        <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                                                    </a>
                                                                    <a href="{{ path('app_profile', {id: user.id}) }}" class="text-white ms-3" style="text-decoration: none;">
                                                                        <span style="font-size: 20px">@{{ user.nametag }}</span>
                                                                    </a>
                                                                </div>
                                                            {% endfor %}
                                                        </ul>
                                                    {% else %}
                                                        <p>No members found for this ring.</p>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="dropdown ms-auto mt-1">
                                        <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h text-white"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            {% if app.user and app.user.id == ring.user.id %}
                                                <li><a class="dropdown-item" href="{{ path('app_ring_update',{'id': ring.id}) }}">Edit...</a></li>
                                                <li>
                                                    <a class="dropdown-item" href="#"
                                                       data-bs-toggle="modal"
                                                       data-bs-target="#deleteRingModal-{{ ring.id }}"
                                                       data-ring-id="{{ ring.id }}"
                                                       data-ring-token="{{ csrf_token('delete' ~ ring.id) }}">
                                                        Delete ring
                                                    </a>
                                                </li>
                                            {% else %}
                                                <li>
                                                    <a class="dropdown-item" href="{{ path('app_ring_report', {id: ring.id}) }}">
                                                        Report
                                                    </a>
                                                </li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>

                                <p class="text-light">{{ ring.description }}</p>

                                <div class="bg-light px-2 py-1 text-dark rounded-pill d-inline-block mb-3">
                                    <a href="{{ path('app_interest_show', {'id': ring.interest.id}) }}" class="text-decoration-none text-dark">
                                        <span>#{{ ring.interest.title }}</span>
                                    </a>
                                </div>

                                <div class="modal fade" id="deleteRingModal-{{ ring.id }}" tabindex="-1" aria-labelledby="deleteRingModalLabel-{{ ring.id }}" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content border-danger">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteRingModalLabel-{{ ring.id }}">Confirm ring deletion</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this ring?
                                            </div>
                                            <div class="modal-footer">
                                                <form method="post" action="{{ path('app_ring_delete', {id: ring.id}) }}">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ring.id) }}">
                                                    <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="col-lg-7 pt-4 ps-4 pe-4 pb-3" style="background-color: #181b20; border-radius: 5px;">
                            <p class="text-light text-center mb-0">This user doesn't have any rings yet.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}
