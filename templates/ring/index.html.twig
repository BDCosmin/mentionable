{% extends 'base.html.twig' %}

{% block title %}Feed - Mentionable{% endblock %}

{% block body %}
    <style>
        @media (max-width: 576px) {
            .ring-image {
                width: 120px !important;
                height: 120px !important;
            }
        }
    </style>
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center mb-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                <div class="row mt-5 mb-3">
                    <div class="col-lg-12 d-flex justify-content-end">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#newRingModal" >
                            <span class="badge bg-light text-dark" style="border-radius: 50%; font-size: 16px; font-weight: bold">+</span>
                        </a>
                    </div>
                    <!-- Modal create community -->
                    <div class="modal fade" id="newRingModal" tabindex="-1" aria-labelledby="newRingModalLabel" aria-hidden="true" style="overflow-y: hidden;">
                        <div class="modal-dialog mt-5" style="max-width: 850px;">
                            <div class="modal-content" style="background-color: #181b20; border-radius: 5px;">
                                <div class="modal-body">
                                    {{ form_start(ringForm, {
                                        'action': path('app_rings_discover'),
                                        'attr': {'class': 'forms-sample'}
                                    }) }}
                                    {{ form_errors(ringForm) }}
                                    <div class="form-group">
                                        {{ form_label(ringForm.title) }}
                                        {{ form_widget(ringForm.title, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(ringForm.title) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(ringForm.description) }}
                                        {{ form_widget(ringForm.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(ringForm.description) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(ringForm.banner) }}
                                        {{ form_widget(ringForm.banner, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(ringForm.banner) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(ringForm.interest) }}
                                        {{ form_widget(ringForm.interest, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(ringForm.interest) }}
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="btn btn-danger me-2" data-bs-dismiss="modal" aria-label="Close">Close</button>
                                        <button type="submit" class="btn btn-light me-2" style="width: 120px;">Create</button>
                                    </div>
                                    {{ form_end(ringForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-12 mb-2 p-0 d-flex flex-row justify-content-center align-items-center">
                            <img src="{{ asset('assets/images/media/rings-logo.png') }}" style="width: 100px; height: 100px;" />
                            <h1 class="m-0" style="user-select: none">Rings</h1>
                        </div>
                        <div class="col-lg-12 mb-4 p-0 d-flex flex-column justify-content-center align-items-center text-center">
                            <p class="m-0" style="font-size: 20px">Connect with people through shared interests on communities.</p>
                            <p class="m-0" style="font-size: 20px">Join circles, spark ideas and discover.</p>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        {# WHAT'S NEW #}
                        <div class="col-lg-10 mb-3 p-0" style="border-radius: 5px; margin-top: 2rem;">
                            <h3 class="mb-2">What's new</h3>
                            <div class="row g-2">
                                {% for ring in rings %}
                                    <div class="col-6 col-sm-4 col-md-3 col-lg-3">
                                        <div class="card h-100 position-relative" style="background-color: #181b20; border-radius: 8px;">
                                            {# RING MENU #}
                                            <div class="dropdown position-absolute top-0 end-0 m-2">
                                                <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" class="text-white">
                                                    <i class="fa fa-ellipsis-h"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    {% if app.user == ring.user %}
                                                        <li><a class="dropdown-item" href="#">Edit...</a></li>
                                                        <li>
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteRingModal-{{ ring.id }}"
                                                               data-note-id="{{ ring.id }}" data-note-token="{{ csrf_token('delete' ~ ring.id) }}">
                                                                Delete ring
                                                            </a>
                                                        </li>
                                                    {% else %}
                                                        <li><a class="dropdown-item" href="#">Report</a></li>
                                                    {% endif %}
                                                </ul>
                                            </div>

                                            {# RING CARD #}
                                            <a href="{{ path('app_ring_show',{'id' : ring.id}) }}" class="mx-auto mt-3">
                                                <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                                     class="card-img-top rounded-circle img-fluid ring-image"
                                                     style="width: 200px; height: 200px; object-fit: cover;" alt="banner">
                                            </a>
                                            <div class="card-body px-3 py-4">
                                                <a href="{{ path('app_ring_show', {'id': ring.id}) }}" style="text-decoration: none">
                                                    <h5 class="card-title text-white mb-0">{{ ring.title }}</h5>
                                                </a>
                                                <small class="text-muted">
                                                    Created by
                                                    <a href="{{ path('app_profile', {'id': ring.user.id}) }}"
                                                       class="text-white fw-bold text-decoration-none">
                                                        {{ ring.user.nametag }}
                                                    </a>
                                                </small>
                                                <p class="card-text text-light mt-2" style="user-select: none">{{ ring.description }}</p>
                                                <a href="{{ path('app_interest_show', {'id': ring.interest.id}) }}">
                                                    <div class="bg-light px-1 text-dark rounded-pill d-inline-block">
                                                        <span class="text-dark" style="font-size: 14px">#{{ ring.interest.title }}</span>
                                                    </div>
                                                </a>
                                            </div>

                                            {# DELETE RING MODAL #}
                                            <div class="modal fade" id="deleteRingModal-{{ ring.id }}" tabindex="-1" aria-labelledby="deleteRingModalLabel-{{ ring.id }}" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content border-danger">
                                                        <div class="modal-header bg-danger text-white">
                                                            <h5 class="modal-title" id="deleteRingModalLabel-{{ ring.id }}">Confirm ring deletion</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete this ring?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <form method="post" action="{{ path('app_ring_delete', { id: ring.id }) }}">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ring.id) }}">
                                                                <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        {# MOST POPULAR #}
                        <div class="col-lg-10 mb-3 p-0" style="border-radius: 5px; margin-top: 4rem;">
                            <h3 class="mb-2">Most popular</h3>
                            <div class="row g-2">
                                {% for ring in rings %}
                                    <div class="col-6 col-sm-4 col-md-3 col-lg-3">
                                        <div class="card h-100 position-relative" style="background-color: #181b20; border-radius: 8px;">
                                            {# RING MENU #}
                                            <div class="dropdown position-absolute top-0 end-0 m-2">
                                                <a href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" class="text-white">
                                                    <i class="fa fa-ellipsis-h"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-end">
                                                    {% if app.user == ring.user %}
                                                        <li><a class="dropdown-item" href="#">Edit...</a></li>
                                                        <li>
                                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteRingModal-{{ ring.id }}"
                                                               data-note-id="{{ ring.id }}" data-note-token="{{ csrf_token('delete' ~ ring.id) }}">
                                                                Delete ring
                                                            </a>
                                                        </li>
                                                    {% else %}
                                                        <li><a class="dropdown-item" href="#">Report</a></li>
                                                    {% endif %}
                                                </ul>
                                            </div>

                                            {# RING CARD #}
                                            <a href="#" class="mx-auto mt-3">
                                                <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                                     class="card-img-top rounded-circle img-fluid ring-image"
                                                     style="width: 200px; height: 200px; object-fit: cover;" alt="banner">
                                            </a>
                                            <div class="card-body px-3 py-4">
                                                <a href="#" style="text-decoration: none">
                                                    <h5 class="card-title text-white mb-0">{{ ring.title }}</h5>
                                                </a>
                                                <small class="text-muted">
                                                    Created by
                                                    <a href="{{ path('app_profile', {'id': ring.user.id}) }}"
                                                       class="text-white fw-bold text-decoration-none">
                                                        {{ ring.user.nametag }}
                                                    </a>
                                                </small>
                                                <p class="card-text text-light mt-2" style="user-select: none">{{ ring.description }}</p>
                                                <a href="{{ path('app_interest_show', {'id': ring.interest.id}) }}">
                                                    <div class="bg-light px-1 text-dark rounded-pill d-inline-block">
                                                        <span class="text-dark" style="font-size: 14px">#{{ ring.interest.title }}</span>
                                                    </div>
                                                </a>
                                            </div>

                                            {# DELETE RING MODAL #}
                                            <div class="modal fade" id="deleteRingModal-{{ ring.id }}" tabindex="-1" aria-labelledby="deleteRingModalLabel-{{ ring.id }}" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content border-danger">
                                                        <div class="modal-header bg-danger text-white">
                                                            <h5 class="modal-title" id="deleteRingModalLabel-{{ ring.id }}">Confirm ring deletion</h5>
                                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete this ring?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <form method="post" action="{{ path('app_ring_delete', { id: ring.id }) }}">
                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ring.id) }}">
                                                                <button type="button" class="btn btn-light me-2" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="btn btn-danger">Delete</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}