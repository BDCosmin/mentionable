{% extends 'base.html.twig' %}

{% block title %}{{ ring.title }} - Rings{% endblock %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper p-0">
            <div class="row justify-content-center mb-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
                <div class="row d-flex justify-content-center mb-3" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                    <div class="col-1"></div>
                    <div class="col-9">
                        <div class="avatar-pic d-flex justify-content-center align-items-center">
                            <div class="avatar-indicator position-relative d-inline-block">
                                <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                     alt="Banner"
                                     class="img-thumbnail img-fluid rounded-circle mt-3"
                                     style="width: 400px; height: auto;"/>
                            </div>
                        </div>
                        <div class="d-flex flex-row mb-3">
                            <img src="{{ asset('assets/images/media/rings-logo.png') }}" style="width: 50px; height: 50px;" />
                            <div class="d-flex flex-column">
                                <h1 class="mb-0" style="margin-top: 4px">{{ ring.title }}</h1>
                                <div class="d-flex flex-row text-muted">
                                    <p class="mb-1 me-1">134K members</p>
                                    <p class="me-1">â€¢</p>
                                    <p>
                                        created by
                                        <a href="{{ path('app_profile', {'id': ring.user.id}) }}"
                                           class="text-muted fw-bold text-decoration-none">
                                            {{ ring.user.nametag }}
                                        </a>
                                    </p>
                                </div>
                                <p class="mb-3 text-white" style="font-size: 20px">{{ ring.description }}</p>
                            </div>
                            <a href="{{ path('app_interest_show', {'id': ring.interest.id}) }}" class="ms-auto">
                                <div class="bg-light px-2 py-1 text-dark rounded-pill d-inline-block">
                                    <span class="text-dark" style="font-size: 22px">#{{ ring.interest.title }}</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}