<!-- partial:partials/_navbar.html -->
<nav class="navbar p-0 fixed-top d-flex flex-row">
    <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
        <a class="navbar-brand brand-logo-mini" href="{{ path('homepage') }}"><img src="{{ asset('../../../assets/images/logo-mini.png') }}" alt="logo" /></a>
    </div>
    <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-menu"></span>
        </button>
        <ul class="navbar-nav w-100">
            <li class="nav-item w-100">
                <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                    <a href="#" class="btn btn-secondary disabled" style="height: 2.575rem; border-top-right-radius: 0; border-bottom-right-radius: 0;" tabindex="-1" role="button" aria-disabled="true">
                        <p style="font-size: 20px; color: #434343">@</p>
                    </a>
                    <input type="text" class="form-control" style="border-left: none; border-top-left-radius: 0; border-bottom-left-radius: 0;" placeholder="Search after a @nametag ...">
                </form>
            </li>
        </ul>
        {# NOTIFICATIONS LIST #}
        <ul class="navbar-nav navbar-nav-right">
            <li class="nav-item dropdown border-left">
                {% set hasNotification = false %}

                {% if notifications is defined %}
                    {% for notification in notifications %}
                        {% if notification.receiver.nametag == app.user.nametag %}
                            {% set hasNotification = true %}
                        {% endif %}
                    {% endfor %}
                {% endif %}

                <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                    <i class="fa fa-bell"></i>
                    {% if hasNotification %}
                        <span class="count bg-danger"></span>
                    {% endif %}
                </a>
                <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                    <h6 class="p-3 mb-0">Latest notifications</h6>
                    <div class="dropdown-divider"></div>
                    {# NOTIFICATION #}
                    {% if notifications is defined %}
                        {% set hasNotifications = false %}
                        {% for notification in notifications %}
                            {% if notification.receiver.nametag == app.user.nametag %}
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-dark rounded-circle">
                                        <img src="{{ asset('uploads/avatars/' ~ notification.sender.avatar) }}" alt="avatarNotif">
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject mb-1">{{ notification.sender.nametag }} mentioned you!</p>
                                    <p class="text-muted ellipsis mb-0"> Tap to see what's the note about. </p>
                                    <small class="text-gray">{{ notification.getHumanTime }}</small>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            {% endif %}
                        {% endfor %}
                        {% if not hasNotifications %}
                            <div class="d-flex flex-row">
                                <div class="preview-thumbnail pt-2 pe-2 ps-3">
                                    <i class="fa fa-eye"></i>
                                </div>
                                <div class="preview-item-content pt-2">
                                    <p class="preview-subject" style="user-select: none">Nothing new.</p>
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                    <div class="navbar-profile">
                        <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="avatar">
                        <p class="mb-0 d-none d-sm-block navbar-profile-name">@{{ app.user.nametag }}</p>
                        <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                    <div class="dropdown-divider"></div>
                        <a class="dropdown-item preview-item" href="{{ path('app_user', {'id': app.user.id}) }}">
                            <div class="preview-thumbnail">
                                <div class="preview-icon bg-dark rounded-circle">
                                    <i class='bx bx-note'  style='color:#ffffff;font-size: 20px;'></i>
                                </div>
                            </div>
                            <div class="preview-item-content">
                                <p class="preview-subject mb-1">My notes</p>
                            </div>
                        </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item preview-item" href="{{ path('app_logout') }}">
                        <div class="preview-thumbnail">
                            <div class="preview-icon bg-dark rounded-circle">
                                <i class="mdi mdi-logout text-danger"></i>
                            </div>
                        </div>
                        <div class="preview-item-content">
                            <b class="preview-subject mb-1" style="text-decoration: none; color: white;">
                                Log out
                            </b>
                        </div>
                    </a>
                    <div class="dropdown-divider"></div>
                </div>
            </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
            <span class="mdi mdi-format-line-spacing"></span>
        </button>
    </div>
</nav>
