{% extends 'base.html.twig' %}

{% block title %}Feed - Mentionable{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        {# CENTERED CONTAINER #}
        <div class="row justify-content-center mb-4">
            {# ADD NOTE CONTAINER #}
            <div class="col-lg-7 p-3" style="background-color: #181b20; border-radius: 5px;">
                <h4 class="mb-3">
                    What's on your mind?
                </h4>
                <form class="forms-sample" method="POST"  action="{{ path('app_note_new') }}">
                    <div class="form-group" style="margin-bottom: 1rem;">
                        <textarea name="content" id="post-content" placeholder="Write a note..."  style="height: 85px" class="form-control" required></textarea>
                    </div>
                    <div class="form-group d-flex flex-row" style="margin-bottom: 1rem;">
                        <a class="btn" style="height: 2.575rem; background-color: #2A3038; border-top-right-radius: 0; border-bottom-right-radius: 0;" tabindex="-1" role="button" aria-disabled="true">
                            <p style="font-size: 20px; color: #eaeaea">@</p>
                        </a>
                        <input type="text" placeholder="Address to someone" name="nametag" id="nametag" class="form-control" style="border-top-left-radius: 0; border-bottom-left-radius: 0;" required>
                    </div>
                    <div class="m-0 p-0" id="errorWhilePosting" style="display: {{ divVisibility }};">
                        <span class="badge badge-danger">{{ error }}</span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-light" style="width: 120px">
                            Post
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {# CENTERED CONTAINER #}
        {# NOTES LIST #}
        <div class="row justify-content-center mb-4">
            <nav class="col-lg-7 m-0 p-0" aria-label="breadcrumb" style="border-radius: 5px;">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active d-flex justify-content-center" style="font-size: 20px; font-family: Bahnschrift; width: 100%" aria-current="page">
                        <b style="opacity: 50%; user-select: none">-- NOTES --</b>
                    </li>
                </ol>
            </nav>
            {# NOTE #}
            {% if notes is defined %}
                {% for note in notes %}
                    <div class="col-lg-7 pt-4 ps-4 pe-4 pb-3" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                        {# NOTE PROFILE #}
                        <div class="navbar-profile d-flex flex-row text-light mb-3">
                            <a class="nav-link me-2" id="avatarNote" href="#">
                                <img class="img-sm rounded-circle" src="{{ asset('uploads/avatars/' ~ note.user.avatar) }}" alt="avatar">
                            </a>
                            <div class="d-flex flex-column">
                                <a class="nav-link mt-3" id="nametagNote" href="#">
                                    <h5 class="mb-0 d-none d-sm-block navbar-profile-name">@{{ note.user.nametag }}</h5>
                                </a>
                                <p class="m-0" style="font-size: 12px">{{ note.getHumanTimePost }}</p>
                            </div>
                        </div>
                        {# NOTE CONTENT #}
                        <div class="d-flex flex-row text-gray mb-2">
                            <p>{{ note.content }}</p>
                        </div>
                        {# NOTE MENTIONED #}
                        <div class="d-inline-block text-gray mb-1" style="background-color: #2A3038">
                            <p style="margin-bottom: -2px;">
                                mentioned <b>@{{ note.nametag }}</b>
                            </p>
                        </div>
                        {# NOTE NAV VOTES & COMMENTS #}
                        <div class="d-flex flex-row text-gray mt-3 mb-2">
                                {# UPVOTE FORM #}
                                <form method="POST" action="{{ path('note_upvote', {id: note.id}) }}" class="me-2">
                                    <button class="btn btn-sm btn-outline-light d-flex align-items-center border-0" type="submit">
                                        <i class='bx bx-arrow-up' style="font-size: 20px;"></i>
                                        <span class="ms-1">{{ note.upVote ?? 0 }}</span>
                                    </button>
                                </form>

                                {# DOWNVOTE FORM #}
                                <form method="POST" action="{{ path('note_downvote', {id: note.id}) }}" class="me-2">
                                    <button class="btn btn-sm btn-outline-light d-flex align-items-center border-0" type="submit">
                                        <i class='bx bx-arrow-down' style="font-size: 20px;"></i>
                                        <span class="ms-1">{{ note.downVote ?? 0 }}</span>
                                    </button>
                                </form>
                            {# COMMENTS BUTTON #}
                            <button type="button"
                                    class="btn btn-outline-light btn-sm d-flex flex-row border-0 ps-0 toggle-comments"
                                    data-note-id="{{ note.id }}"
                                    style="height: 2rem">
                                <i class='bx bx-message-circle-reply pt-1 pe-2' style='color: white'></i>
                                <p class="mb-0">COMMENTS</p>
                            </button>
                        </div>
                        {# NOTE DIVIDER #}
                        <div class="d-flex flex-row text-gray mt-3 mb-2">
                            <hr style="border: 1px solid #757575; width: 100%;">
                        </div>

                        {# NOTE COMMENT #}
                        <div class="note-comments" id="comments-{{ note.id }}" style="display: none;">
                            {# FORMULAR COMENTARIU #}
                            <form method="POST" action="{{ path('note_comment', {id: note.id}) }}">
                                <div class="d-flex flex-row mb-3">
                                    <a class="nav-link me-2" href="#">
                                        <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="avatar">
                                    </a>
                                    <div class="d-flex flex-row w-100">
                                        <input type="text" name="message" class="form-control mb-1" placeholder="Write a comment..." required>
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" class="btn btn-light btn-sm px-3" style="height: 40px;">Post</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            {# LISTA DE COMENTARII #}
                            {% for comment in note.comments %}
                                <div class="d-flex flex-row mb-3">
                                    <a class="nav-link me-2" href="#">
                                        <img class="img-xs rounded-circle" src="{{ asset('uploads/avatars/' ~ comment.user.avatar) }}" alt="avatar">
                                    </a>
                                    <div class="text-white">
                                        <p class="mb-0">@{{ comment.user.nametag }}</p>
                                        <small class="text-muted">{{ comment.message }}</small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                    <div class="col-lg-7 pt-4 ps-4 pe-4" style="background-color: #181b20; border-radius: 5px; margin-top: 2rem;">
                        <p class="text-light">Oops. No notes available here.</p>
                    </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
{{ parent() }}

<script>
document.addEventListener("DOMContentLoaded", function () {
    const buttons = document.querySelectorAll(".toggle-comments");

    buttons.forEach(button => {
        button.addEventListener("click", function () {
            const noteId = this.getAttribute("data-note-id");
            const commentSection = document.getElementById("comments-" + noteId);

            if (commentSection) {
                if (commentSection.style.display === "none" || commentSection.style.display === "") {
                    commentSection.style.display = "block";
                } else {
                    commentSection.style.display = "none";
                }
            } else {
                console.error("Nu s-a gÄƒsit elementul pentru comentarii cu id: comments-" + noteId);
            }
        });
    });
});
</script>
{% endblock %}

