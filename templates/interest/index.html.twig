{% extends 'base.html.twig' %}

{% block title %}#{{ interest.title }} on Mentionable{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper p-0">
        <div class="row justify-content-center px-0 mb-4 mt-5">
            <div class="col-lg-8 p-2" style="background-color: #181b20; border-radius: 5px;">
                <div class="ms-3 p-0 mb-3" id="errorWhilePosting" style="display: {{ divVisibility }};">
                    <span class="badge bg-danger">{{ error }}</span>
                </div>
                <div class="d-flex flex-column m-0 p-3 mb-3">
                    {% if users is empty and divVisibility == 'none' %}
                        <p>No users found..</p>
                    {% else %}
                    <div class="d-flex flex-wrap gap-2 m-0 p-1 rounded">
                        <div class="bg-light px-2 py-1 text-dark rounded-pill" style="user-select: none">
                            <h4 class="pt-1">#{{ interest.title }}</h4>
                        </div>
                    </div>
                        {% set filteredUsers = users|filter(user => user.id != app.user.id) %}
                        <h4 class="mt-4 ms-3">Users with this interest:</h4>
                        {% if filteredUsers is not empty %}
                            <ul>
                                {% for user in filteredUsers %}
                                    <div class="d-flex flex-row m-0 p-0 mb-1 mt-2">
                                        <a href="{{ path('app_profile', {id: user.id}) }}" class="ms-3">
                                            <img class="img-sm rounded-circle" src="{{ asset('Uploads/avatars/' ~ user.avatar) }}" alt="avatar" onerror="showDefaultIcon(this)">
                                        </a>
                                        <a href="{{ path('app_profile', {id: user.id}) }}" class="text-white ms-3" style="text-decoration: none;">
                                            <span style="font-size: 20px">@{{ user.nametag }}</span>
                                        </a>
                                    </div>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted ms-3">No users found with this interest.</p>
                        {% endif %}
                    {% endif %}
                    <h4 class="mt-4 ms-3">Rings with this interest:</h4>

                    {% if rings is defined and rings|length %}
                        <div class="d-flex flex-column gap-3 mt-2 ms-3 me-3">
                            {% for ring in rings %}
                                <div class="d-flex align-items-center rounded p-3 shadow-sm" style="background-color: #191c24">
                                    <a href="{{ path('app_ring_show', {'id': ring.id}) }}">
                                        <img src="{{ asset('uploads/rings/' ~ ring.banner) }}"
                                             class="rounded-circle me-3"
                                             alt="banner"
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    </a>
                                    <div class="flex-grow-1">
                                        <a href="{{ path('app_ring_show', {'id': ring.id}) }}" class="text-decoration-none text-white">
                                            <h4 class="mb-1 text-white">{{ ring.title }}</h4>
                                        </a>
                                        <small class="text-white">by
                                            <a href="{{ path('app_profile', {'id': ring.user.id}) }}" class="text-decoration-none text-white" style="font-weight: bold">
                                                @{{ ring.user.nametag }}
                                            </a>
                                        </small>
                                    </div>

                                    <a href="{{ path('app_ring_show', {'id': ring.id}) }}" class="btn btn-outline-light btn-sm" style="font-weight: bold">Visit</a>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted ms-3">No rings with this interest yet.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascript %}
{{ parent() }}
<script src="{{ asset('../assets/js/feed.js') }}"></script>
{% endblock %}
